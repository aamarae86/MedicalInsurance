@using ERP.Web.UI.Controllers.Authentications
@using ERP.Web.UI.Models.ViewModels.Authentications
@model UsersVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string actionName = (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString()) ?
        nameof(UsersController.PostUsers) : nameof(UsersController.UpdateUser);
    bool isActiveValue = Model == null ? false : Model.IsActive;
}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(actionName, "Users", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            @Html.HiddenFor(z => z.BaseUrl)
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Name, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Name, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.Name)
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.SurName, new { @class = "form-control" })
                            @Html.LabelFor(z => z.SurName, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.SurName)
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.EmailAddress, new { @class = "form-control" })
                            @Html.LabelFor(z => z.EmailAddress, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.EmailAddress)
                    </div>
                </div>
                @if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString())
                {
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.TextBoxFor(z => z.UserName, new { @class = "form-control" })
                                @Html.LabelFor(z => z.UserName, new { @class = "form-label" })
                            </div>
                            @Html.ValidationMessageFor(z => z.UserName)
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.TextBox("user", Model.UserName, new { @disabled = true, @class = "form-control" })
                                @Html.LabelFor(z => z.UserName, new { @class = "form-label" })
                            </div>
                        </div>
                    </div>
                    @Html.HiddenFor(z => z.UserName)
                }
            </div>
            @*if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString())
                {
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.PasswordFor(z => z.Password, new { @class = "form-control" })
                                    @Html.LabelFor(z => z.Password, new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(z => z.Password)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.PasswordFor(z => z.ConfirmPassword, new { @class = "form-control" })
                                    @Html.LabelFor(z => z.ConfirmPassword, new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(z => z.ConfirmPassword)
                            </div>
                        </div>
                    </div>
                }*@
            <div class="row clearfix">
                <div class="col-md-6">
                    @if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <p>
                            @if (Model.IsActive)
                            {
                                <i class="fas fa-check text-success fa-2x"></i>
                            }
                            else
                            {
                                <i class="fas fa-times text-danger fa-2x"></i>
                            }
                            <span>@Html.LabelFor(z => z.IsActiveAlt)</span>
                        </p>
                    }
                    else if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Update.ToString())
                    {
                        <p>
                            <label>
                                @if (Model.IsActive)
                                {
                                    <input type="checkbox" onclick="setIsActiveUserValue()" checked id="@nameof(Model.IsActiveAlt)" name="@nameof(Model.IsActiveAlt)" />
                                }
                                else
                                {
                                    <input type="checkbox" onclick="setIsActiveUserValue()" id="@nameof(Model.IsActiveAlt)" name="@nameof(Model.IsActiveAlt)" />
                                }
                                <span>@Html.LabelFor(z => z.IsActiveAlt)</span>
                            </label>
                        </p>
                    }
                    else
                    {
                        <p>
                            <label>
                                <input type="checkbox" onclick="setIsActiveUserValue()" checked id="@nameof(Model.IsActiveAlt)" name="@nameof(Model.IsActiveAlt)" />
                                <span>@Html.LabelFor(z => z.IsActiveAlt)</span>
                            </label>
                        </p>
                    }

                    @Html.HiddenFor(u => u.IsActive, new { @Value = true })
                    @*<input type="hidden" id="@nameof(Model.IsActive)" value="@isActiveValue" name="@nameof(Model.IsActive)" />*@
                </div>
            </div>

            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
<script>
    
    $(function () {        
        $('#BaseUrl').val(window.location.origin);
    })
    var OnBegin = function (response) {
        if ($('#Password').val() === $('#ConfirmPassword').val()) {
            fireBtnLoader();
        } else {
            toastr.warning('@ERP.ResourcePack.Accounts.ArCustomers.PasswordConfirmationNotEquals');
            response.abort(function () {})
            return false;
        }
    };
</script>
