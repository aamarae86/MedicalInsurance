@using ERP.Web.UI.Controllers.AccountsExtend
@using ERP.Web.UI.Models.ViewModels.AccountsExtend
@{
    ViewBag.Title = ERP.ResourcePack.AccountsExtend.ArInvoiceSettlementHd.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as ArInvoiceSettlementHdVM;
}
<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(ArInvoiceSettlementHdController.ArInvoiceSettlementHdForm), new { id = id, trigger = formTrigger, ArInvoiceSettlementHdVM = detailObj })
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#RecepitsAndJournales" data-toggle="tab" class="show active">@ERP.ResourcePack.AccountsExtend.ArInvoiceSettlementHd.RecepitsAndJournales</a>
                    </li>
                    <li role="presentation">
                        <a href="#Invoices" data-toggle="tab" class="">@ERP.ResourcePack.AccountsExtend.ArInvoiceSettlementHd.Invoices</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show " id="RecepitsAndJournales">
                        @Html.Action(nameof(ArInvoiceSettlementHdController.RecepitsAndJournalesFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(ArInvoiceSettlementHdController.RecepitsAndJournalesDataDetail))
                    </div>
                    <div role="tabpanel" class="tab-pane fade in " id="Invoices">
                        @Html.Action(nameof(ArInvoiceSettlementHdController.InvoicesFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(ArInvoiceSettlementHdController.InvoicesDataDetail))
                    </div>
                </div>
                <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/ArInvoiceSettlementHd" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';
        let formView = @(id == null ? 0 : id);
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/ArInvoiceSettlementHd/ArInvoiceSettlementHdScripts.cshtml")
    @if (id != null)
    {
<script>
            $(function () {

                        LoadInvoicesDetailData();
                LoadRecepitsAndJournalesDetailData();
                GetOutStanding(@detailObj.ArCustomerId);
                    });
</script>
    }
}
