@using ERP.ResourcePack.CRM.CrmContactUs
@using ERP.Web.UI.Models.ViewModels.CRM.CrmContactUs
@model CrmContactUsVM

<div class="card" id="searchBox">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@CrmContactUs.Title</strong> -  @CrmContactUs.SearchForm</h2>
    </div>
    <div class="body collapse show" id="searchCollapse">

        <div class="row clearfix">
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(x => x.HeaderNameAr, new { @class = "form-control" })
                        @Html.LabelFor(x => x.HeaderNameAr, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(x => x.HeaderNameEn, new { @class = "form-control" })
                        @Html.LabelFor(x => x.HeaderNameEn, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        @Html.LabelFor(x => x.Email, new { @class = "form-label" })
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mb-3">
            <button type="button" class="btn btn-success btn-border-radius mx-2 waves-effect" onclick="return LoadDataGrid()">
                @ERP.ResourcePack.Common.Settings.BtnSearch
            </button>
            <a href="javascript:void(0)" class="btn btn-danger btn-border-radius" onclick="return clearSearchForm()" role="button" aria-haspopup="true" aria-expanded="false">
                @ERP.ResourcePack.Common.Settings.BtnClear
            </a>
        </div>
    </div>
</div>