@using ERP.ResourcePack.Common
@using ERP.Web.UI.Models.ViewModels

@*public string  { get; set; }
        public string Phone { get; set; }
        public string Email { get; set; }
        public string CreatedDate { get; set; }
        public string Lang { get; set; }*@

<div class="card" id="searchBox">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@ERP.ResourcePack.Common.Menu.TenantModules</strong> -  @Pages.SearchForm</h2>
    </div>
    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">

            <div class="col-sm-4">
                <label for="Name" class="form-label"> @ERP.ResourcePack.Accounts.ReportsAccounts.Name </label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <input type="text" class="form-control" name="Name" id="Name" value="" />
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <label for="Phone" class="form-label"> @ERP.ResourcePack.Accounts.ReportsAccounts.Tel </label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <input type="number" class="form-control" name="Phone" id="Phone" value="" />
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <label for="Email" class="form-label"> @ERP.ResourcePack.Accounts.ReportsAccounts.Email </label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <input type="email" class="form-control" name="Email" id="Email" value="" />
                    </div>
                </div>
            </div>

           

        </div>
        <div class="d-flex justify-content-end mb-3">
            <button type="button" class="btn btn-success btn-border-radius mx-2 waves-effect" onclick="return LoadDataGrid()">
                @ERP.ResourcePack.Common.Settings.BtnSearch
            </button>
            <a href="javascript:void(0)" class="btn btn-danger btn-border-radius" onclick="return clearSearchForm()" role="button" aria-haspopup="true" aria-expanded="false">
                @ERP.ResourcePack.Common.Settings.BtnClear
            </a>
        </div>
    </div>
</div>