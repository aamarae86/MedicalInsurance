@model ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(nameof(ERP.Web.UI.Controllers.General.FndLookupValuesController.PostFndLookupValues), "HrAbsencesTypes", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)

            <div class="row clearfix">
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.NameAr, new { @class = "form-control" })
                            @Html.LabelFor(z => z.NameAr, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.NameAr)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.NameEn, new { @class = "form-control" })
                            @Html.LabelFor(z => z.NameEn, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.NameEn)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.LookupCode, new { @class = "form-control", disabled = true })
                            @Html.LabelFor(z => z.LookupCode, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.LookupCode)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.LookupType, new { @class = "form-control", disabled = true })
                            @Html.LabelFor(z => z.LookupType, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.LookupType)
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>