@using ERP.ResourcePack.Accounts
@model ERP._System.__ReportsPms.Input.rptPmPropertiesIncomeHelperInput
@{
    ViewBag.Title = ReportsAccounts.PropertiesRevenue;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@ReportsAccounts.PropertiesRevenue</strong></h2>
    </div>
    <div class="body  collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line text-center">
                        @Html.TextBoxFor(z => z.FromDate, new { @class = "form-control datepicker" })
                        <label class="form-label">@ReportsAccounts.FromDate</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line text-center">
                        @Html.TextBoxFor(z => z.ToDate, new { @class = "form-control datepicker" })
                        <label class="form-label">@ReportsAccounts.ToDate</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label class="form-label">@ReportsAccounts.OwnerId</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <select id="PmOwnerId" name="PmOwnerId" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label class="form-label">@ERP.ResourcePack.Accounts.GlPeriodsYears.PeriodYear</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <select id="PeriodsYearId" name="PeriodsYearId" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line text-center">
                        @Html.TextBoxFor(z => z.PmOwnerIdNumber, new { @class = "form-control", @readonly = "true" })
                        <label class="form-label">@ReportsAccounts.OwnerNumber</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label class="form-label">@ReportsAccounts.PropertyId</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <select id="PropertyId" name="PropertyId" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line text-center">
                        @Html.TextBoxFor(z => z.PropertyIdNumber, new { @class = "form-control", @readonly = "true" })
                        <label class="form-label">@ReportsAccounts.propertyNumber</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label class="form-label">@ReportsAccounts.PmUnitTypeLkpId</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <select id="PmUnitTypeLkpId" name="PmUnitTypeLkpId" class="form-control"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12 text-center">
                <div class="form-group">
                    <button id="btnPrint" onclick="return PrintTmCharityBoxListReport()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.Print</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Html.Partial("~/ViewsScripts/_ReportsPms/PropertiesRevenueScripts.cshtml")
    @Html.Partial("_ReportModal")
}