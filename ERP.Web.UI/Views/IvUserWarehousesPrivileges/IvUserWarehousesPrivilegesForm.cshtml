@using ERP.Web.UI.Models.ViewModels.Warehouses
@model IvUserWarehousesPrivilegesVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string lkpKeyDdl = lang == "ar-EG" ? nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameAr) : nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameEn);

}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(nameof(ERP.Web.UI.Controllers.Warehouses.IvUserWarehousesPrivilegesController.PostIvUserWarehousesPrivileges), "IvUserWarehousesPrivileges",
            new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
        <div class="row clearfix">
            <div class="col-sm-6">
                @Html.LabelFor(z => z.UserId, new { @class = "form-label label-required" })
                <div class="form-group form-float">
                    <div class="form-line">
                        @if (Model != null && Model.User != null)
                        {
                            var list = new List<ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM> { new ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM { Id = Model.UserId, NameAr = Model.User.Name, NameEn = Model.User.Name } };

                            var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.UserId);

                            @Html.DropDownListFor(z => z.UserId, selectList, new { @class = "form-control" })
                        }
                        else
                        {
                            @Html.DropDownListFor(z => z.UserId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        }

                        @Html.ValidationMessageFor(z => z.UserId)
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(z => z.IvWarehouseId, new { @class = "form-label label-required" })
                <div class="form-group form-float">
                    <div class="form-line">
                        @if (Model != null && Model.IvWarehouses != null)
                        {
                            var list = new List<ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM> { new ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM { Id = Model.IvWarehouseId, NameAr = Model.IvWarehouses.WarehouseName, NameEn = Model.IvWarehouses.WarehouseName } };

                            var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.IvWarehouseId);

                            @Html.DropDownListFor(z => z.IvWarehouseId, selectList, new { @class = "form-control" })
                        }
                        else
                        {
                            @Html.DropDownListFor(z => z.IvWarehouseId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        }

                        @Html.ValidationMessageFor(z => z.IvWarehouseId)
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-md-12">
                @if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                {
                    <p>
                        @if (Model.HasIssue)
                        {
                            <i class="fas fa-check text-success fa-2x"></i>
                        }
                        else
                        {
                            <i class="fas fa-times text-danger fa-2x"></i>
                        }
                        <span>@Html.LabelFor(z => z.HasIssue)</span>
                    </p>
                }
                else if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Update.ToString())
                {
                    <p>
                        <label>
                            @if (Model.HasIssue)
                            {
                                <input type="checkbox" onclick="mainForm.HasIssue.value = $('#HasIssueAlt').is(':checked')" checked id="@nameof(Model.HasIssueAlt)" name="@nameof(Model.HasIssueAlt)" />
                            }
                            else
                            {
                                <input type="checkbox" onclick="mainForm.HasIssue.value = $('#HasIssueAlt').is(':checked')" id="@nameof(Model.HasIssueAlt)" name="@nameof(Model.HasIssueAlt)" />
                            }
                            <span>@Html.LabelFor(z => z.HasIssue)</span>
                        </label>
                    </p>
                }
                else
                {
                    <p>
                        <label>
                            <input type="checkbox" onclick="mainForm.HasIssue.value = $('#HasIssueAlt').is(':checked')" id="@nameof(Model.HasIssueAlt)" name="@nameof(Model.HasIssueAlt)" />
                            <span>@Html.LabelFor(z => z.HasIssue)</span>
                        </label>
                    </p>
                }

                <input type="hidden" id="@nameof(Model.HasIssue)" name="@nameof(Model.HasIssue)" value="@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? "false" : Model.HasIssue.ToString())" />
            </div>
            <div class="col-md-12">
                @if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                {
                    <p>
                        @if (Model.HasReceive)
                        {
                            <i class="fas fa-check text-success fa-2x"></i>
                        }
                        else
                        {
                            <i class="fas fa-times text-danger fa-2x"></i>
                        }
                        <span>@Html.LabelFor(z => z.HasReceive)</span>
                    </p>
                }
                else if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Update.ToString())
                {
                    <p>
                        <label>
                            @if (Model.HasReceive)
                            {
                                <input type="checkbox" onclick="mainForm.HasReceive.value = $('#HasReceiveAlt').is(':checked')" checked id="@nameof(Model.HasReceiveAlt)" name="@nameof(Model.HasReceiveAlt)" />
                            }
                            else
                            {
                                <input type="checkbox" onclick="mainForm.HasReceive.value = $('#HasReceiveAlt').is(':checked')" id="@nameof(Model.HasReceiveAlt)" name="@nameof(Model.HasReceiveAlt)" />
                            }
                            <span>@Html.LabelFor(z => z.HasReceive)</span>
                        </label>
                    </p>
                }
                else
                {
                    <p>
                        <label>
                            <input type="checkbox" onclick="mainForm.HasReceive.value = $('#HasReceiveAlt').is(':checked')" id="@nameof(Model.HasReceiveAlt)" name="@nameof(Model.HasReceiveAlt)" />
                            <span>@Html.LabelFor(z => z.HasReceive)</span>
                        </label>
                    </p>
                }

                <input type="hidden" id="@nameof(Model.HasReceive)" name="@nameof(Model.HasReceive)" value="@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? "false" : Model.HasReceive.ToString())" />
            </div>
        </div>
            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
<script>
    $('<b class="text-danger"> * </b>').appendTo('.label-required');

    $('#main-modal #UserId').select2(ReturnSelect2ObjectDefault(`${baseUrl}/User/GetUsersSelect2`));
    $('#main-modal #IvWarehouseId').select2(ReturnSelect2ObjectDefault(`${baseUrl}/IvWarehouses/GetIvWarehousesSelect2`));
</script>