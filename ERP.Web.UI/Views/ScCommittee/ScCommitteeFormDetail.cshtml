@using ERP.Web.UI.Models.ViewModels.AidModule
@model ScCommitteeVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    bool isFormDetail = Model?.Id > 0 && formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString();
}

<div class="card" style="display:@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString() ? "none":"block" ) ">
    <div class="body">
        <div class="row clearfix">
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.DropDownListFor(z => z.Details_PortalUser_IdNumber, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        @Html.LabelFor(z => z.Details_PortalUser_Name, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.DropDownListFor(z => z.Details_PortalRequestNumber, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        @Html.LabelFor(z => z.Details_PortalRequestNumber, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.Details_CashingTo, getHtmlAttributes(isFormDetail, "form-control", string.Empty))
                        @Html.LabelFor(z => z.Details_CashingTo, new { @class = "form-label" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-md-1">
                <p>
                    <label>
                        <input type="checkbox" id="@nameof(Model.IsMedicine)" name="@nameof(Model.IsMedicine)" />
                        <span>@Html.LabelFor(z => z.IsMedicine)</span>
                    </label>
                </p>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.Details_AidAmount, new { @class = "form-control", @type = "number", @min = 0 })
                        @Html.LabelFor(z => z.Details_AidAmount, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.Details_NoOfMonths, new { @class = "form-control", @type = "number", @min = 0 })
                        @Html.LabelFor(z => z.Details_NoOfMonths, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.DropDownListFor(z => z.OtherAidLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        @Html.LabelFor(z => z.OtherAidLkpId, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.OtherMonthNo, new { @class = "form-control", @type = "number", @min = 0 })
                        @Html.LabelFor(z => z.OtherMonthNo, new { @class = "form-label" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextAreaFor(z => z.Details_Notes, new { @class = "form-control" })
                        @Html.LabelFor(z => z.Details_Notes, new { @class = "form-label" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group m-2">
                    <button id="btnAddScCommitteeDetailRow" onclick="return AddScCommitteeDetail()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.BtnAddNew</button>
                    <button style="display:none;" id="btnUpdateScCommitteeDetailRow" onclick="return UpdateScCommitteeDetailRow()" class="btn btn-info">@ERP.ResourcePack.Common.Settings.BtnUpdate</button>
                    <button style="display:none;" id="btnCancelScCommitteeDetailRow" onclick="CancelEditScCommitteeDetailRow()" class="btn btn-danger">@ERP.ResourcePack.Common.Settings.BtnCancel</button>
                </div>
            </div>
        </div>

    </div>
</div>

@functions {
    object getHtmlAttributes(bool Disabled, string CssClass, string CssClass2)
    {
        if (Disabled)
        {
            return new { @class = CssClass, Disabled = Disabled };
        }
        return new { @class = $"{CssClass} {CssClass2}" };
    }
}