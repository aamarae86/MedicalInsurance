@using ERP.Web.UI.Controllers.AidModule
@using ERP.Web.UI.Models.ViewModels.AidModule
@{
    ViewBag.Title = ERP.ResourcePack.AidModule.ScCommittee.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as ScCommitteeVM;
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(ScCommitteeController.ScCommitteeForm), new { id = id, trigger = formTrigger, ScCommitteeVM = detailObj })
    </div>
    <div class="row clearfix">
        <div class="col-md-12 text-center" id="btnPostOrRefuseCommitteeContainer"></div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <div class="header">
                    <h2><strong>@ERP.ResourcePack.Accounts.GlJeHeaders.DetailData</strong></h2>
                </div>
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#first" data-toggle="tab" class="show active">@ERP.ResourcePack.AidModule.ScCommittee.DetailData</a>
                    </li>
                    <li role="presentation">
                        <a href="#second" data-toggle="tab" class="show">@ERP.ResourcePack.AidModule.ScCommittee.MemberData</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="first">
                        @Html.Action(nameof(ScCommitteeController.ScCommitteeFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(ScCommitteeController.ScCommitteeDataDetail))
                    </div>
                    <div role="tabpanel" class="tab-pane fade in" id="second">
                        @Html.Action(nameof(ScCommitteeController.ScCommitteeFormMemberDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(ScCommitteeController.ScCommitteeDataMemberDetail))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/ScCommittee" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="electronic-aids" style="display:none">
    @Html.Action(nameof(ScCommitteeController.ScCommitteeElectronicAidsForm), new { id = id, trigger = formTrigger })
    @Html.Action(nameof(ScCommitteeController.ScCommitteeElectronicAidsData))
</div>

@section scripts{
    <script>
           let formView = true;
        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("_ReportModal")
    @Html.Partial("~/ViewsScripts/_AidModule/ScCommittee/ScCommitteeScripts.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {
                LoadScCommitteeDetailData();

                if (primaryEntityKeyId && trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString()' && @detailObj.StatusLkpId == @Convert.ToInt64(ERP.Front.Helpers.Enums.Common.ScCommittee.New)) {

                    $('#btnPostOrRefuseCommitteeContainer').html(`<a href="javascript:void(0)" onclick="return PostAjax(@id)" class="btn btn-success">${'@ERP.ResourcePack.AidModule.ScCommittee.PostCommittee'}</a> <a href="javascript:void(0)" onclick="return RefuseAjax(@id)" class="btn btn-danger">${'@ERP.ResourcePack.AidModule.ScCommittee.CloseCommittee'}</a>`);
                };
            });
        </script>
    }
    else
    {
        <script>
          $('#CommitteeDate').val('@DateTime.Now.ToString(ERP.Helpers.Core.Formatters.DateFormat)');
          LoadDefaultCommitteeMembers();
        </script>
    }
}
