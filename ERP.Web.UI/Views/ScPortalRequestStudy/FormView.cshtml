@using ERP.Web.UI.Controllers.AidModule
@using ERP.Web.UI.Models.ViewModels.AidModule
@using ERP.Web.UI.Models.ViewModels.Accounts
@{
    ViewBag.Title = ERP.ResourcePack.AidModule.ScPortalRequestStudy.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as ScPortalRequestStudyVM;
    string encShowTrigger = ERP.Front.Helpers.Enums.Common.EncShow;
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(ScPortalRequestStudyController.ScPortalRequestStudyForm), new
        {
            id = id,
            trigger = formTrigger,
            ScPortalRequestStudyVM = detailObj,
            glAccHeadersVMs = ViewData["ListGlAccHeadersVM"] == null ? new List<GlAccHeadersVM>() : ViewData["ListGlAccHeadersVM"] as List<GlAccHeadersVM>
        })
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#first" data-toggle="tab" class="show active">@ERP.ResourcePack.AidModule.ScPortalRequestStudy.Attachments</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="first">
                        @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                        {
                            @Html.Partial("_AttachmentForm");
                        }
                        @Html.Partial("_AttachmentsData");
                    </div>
                </div>
                <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/ScPortalRequestStudy" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';
        let formView = true;

        if ( trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString()') {
            $('#ResearcherName').val('@Session["userName"].ToString()');
        }

    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScriptManager.cshtml")
    @Html.Partial("~/ViewsScripts/_AidModule/ScPortalRequestStudy/ScPortalRequestStudyScripts.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {
                LoadAttachments();

                if (primaryEntityKeyId && trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString()' && @detailObj.StatusLkpId == @Convert.ToInt64(ERP.Front.Helpers.Enums.Common.ScPortalRequestStudy.New)) {

                    let btns = '';

                    btns += `<a href="javascript:void(0)" onclick="return PostAjax(@id)" class="btn btn-success">${'@ERP.ResourcePack.Common.Settings.Post'}</a>`;
                    btns += `<a href="javascript:void(0)" onclick="return ManagerPostAjax(@id)" class="btn btn-info">${'@ERP.ResourcePack.Common.Settings.ManagerPost'}</a>`;
                    btns += `<a href="javascript:void(0)" onclick="return RefuseAjax(@id)" class="btn btn-danger">${'@ERP.ResourcePack.Common.Settings.Refuse'}</a>`;

                    $('#btnContainer').html(btns);
                };

                if (primaryEntityKeyId
                    && trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString()'
                    && (@detailObj.StatusLkpId == 166 || @detailObj.StatusLkpId == 167 || @detailObj.StatusLkpId == 169)) {

                    let btns = '';

                    btns += `<a href="javascript:void(0)" onclick="return UnPostAjax(@id)" class="btn btn-danger">${'@ERP.ResourcePack.Common.Settings.UnPost'}</a>`;

                    $('#btnContainer').append(btns);
                };

                if ($('#CaseName').find(':selected').val()) {

                    $('#openProfile').html(`<a href="${$PrefixHostName}/ScPortalRequests/FormView?id=${$('#CaseName').attr('data-enc-id')}&t=@encShowTrigger" target="_blank" title="@ERP.ResourcePack.Common.Settings.Show"><i class="mx-2 fas fa-eye text-info"></i> @ERP.ResourcePack.Common.Settings.Show </a>`);

                } else {

                    $('#openProfile').empty();

                }


            });
        </script>
    }
    else
    {
        <script>
            $('#StudyDate').val('@DateTime.Now.ToString(ERP.Helpers.Core.Formatters.DateFormat)');
            $('#NumberOfMonths').val(1);
            $('#NumberOfMonths').parent('.form-line').addClass('focused');
        </script>
    }
}
