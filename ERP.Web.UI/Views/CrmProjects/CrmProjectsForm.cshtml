@using ERP.Web.UI.Models.ViewModels.CRM._projects
@model CrmProjectsVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string lkpKeyDdl = lang == "ar-EG" ? nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameAr) : nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameEn);
}


<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(nameof(ERP.Web.UI.Controllers.CRM.CrmProjectsController.PostCrmProjects), "CrmProjects", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)


            <div class="row clearfix">
                <div class="col-sm-8">
                    <div class="row  clearfix">

                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(z => z.ProjectNameAr, new { @class = "form-control" })
                                    @Html.LabelFor(z => z.ProjectNameAr, new { @class = "form-label" })
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(z => z.ProjectNameEn, new { @class = "form-control" })
                                    @Html.LabelFor(z => z.ProjectNameEn, new { @class = "form-label" })
                                </div>
                            </div>
                        </div>



                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(z => z.ProjectAdressAr, new { @class = "form-control" })
                                    @Html.LabelFor(z => z.ProjectAdressAr, new { @class = "form-label" })
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(z => z.ProjectAdressEn, new { @class = "form-control" })
                                    @Html.LabelFor(z => z.ProjectAdressEn, new { @class = "form-label" })
                                </div>
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextBoxFor(z => z.ProjectDate, new { @class = "form-control datepicker" })
                                    @Html.LabelFor(z => z.ProjectDate, new { @class = "form-label" })
                                </div>
                            </div>
                        </div>




                    </div>

                </div>
                <div class="col-sm-4">
                    @Html.HiddenFor(z => z.Filepath)

                    @if (Model == null || string.IsNullOrEmpty(Model.Filepath))
                    {
                        <img id="blah" src="~/AssetsPack/assets/images/Unknown.png" alt="Person Photo" style="height:200px" class="card-img-top img-thumbnail responsive-img" />
                    }
                    else
                    {
                        <img id="blah" src="@Model.Filepath" alt="Person Photo" style="height:200px" class="card-img-top img-thumbnail responsive-img" />
                    }
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        @Html.Partial("_AttachmentComponent", new ERP.Web.UI.Models.ViewModels.AttachmentComponentModelVM { HidenFilePathId = nameof(Model.Filepath), ImgId = "blah" })
                    }
                </div>
            </div>



            <div class="row clearfix">
                <div class="col-sm-12">
                    @Html.LabelFor(z => z.ContentAr, new { @class = "form-label pb-2" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextAreaFor(z => z.ContentAr, new { @class = "form-control summernote" })
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    @Html.LabelFor(z => z.ContentEn, new { @class = "form-label pb-2" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextAreaFor(z => z.ContentEn, new { @class = "form-control summernote" })
                        </div>
                    </div>
                </div>

            </div>
            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
<script src="~/lib/summernote/summernote-lite.min.js"></script>

<script>
    $('.summernote').summernote({
        tabsize: 2,
        height: 100,
        toolbar: [
            ['style', ['bold', 'italic', 'underline', 'clear']],
            ['font', ['strikethrough', 'superscript', 'subscript']],
            ['fontsize', ['fontsize']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['height', ['height']],
            ['fontname', ['fontname']],
            ['table', ['table']],
            ['insert', ['link']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]



    });


  

</script>
