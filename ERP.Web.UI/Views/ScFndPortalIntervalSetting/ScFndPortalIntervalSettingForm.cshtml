@using ERP.Web.UI.Models.ViewModels.AidModule
@model ScFndPortalIntervalSettingVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(nameof(ERP.Web.UI.Controllers.AidModule.ScFndPortalIntervalSettingController.PostScFndPortalIntervalSetting), "ScFndPortalIntervalSetting",
            new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            <div class="row clearfix">
                <div class="col-md-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.FromDate, new { @class = "form-control datepicker", @onchange = "validateDateFilter()" })
                            @Html.LabelFor(z => z.FromDate, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.FromDate)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.FromTime, new { @class = "form-control", @id = "timepicker", @onchange = "validateDateFilter()" })
                            @Html.LabelFor(z => z.FromTime, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.FromTime)
                    </div>
                    <script>
                        $('#timepicker').bootstrapMaterialDatePicker({
                            date: false,
                            shortTime: true,
                            format: 'HH:mm'
                        });
                    </script>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.ToDate, new { @class = "form-control datepicker", @onchange = "validateDateFilter()" })
                            @Html.LabelFor(z => z.ToDate, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.ToDate)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.ToTime, new { @class = "form-control", @id = "timepicker2", @onchange = "validateDateFilter()" })
                            @Html.LabelFor(z => z.ToTime, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.ToTime)
                    </div>
                    <script>
                        $('#timepicker2').bootstrapMaterialDatePicker({
                            date: false,
                            shortTime: true,
                            format: 'HH:mm'
                        });
                    </script>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.NumberOfRequest, new { @type = "number", @min = "0", @class = "form-control" })
                            @Html.LabelFor(z => z.NumberOfRequest, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.NumberOfRequest)
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-primary btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
