@using ERP.Web.UI.Models.ViewModels.General
@using ERP.Web.UI.Models.ViewModels.HR
@model HrPersonVacationsVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string lkpKeyDdl = lang == "ar-EG" ? nameof(FndLookupValuesVM.NameAr) : nameof(FndLookupValuesVM.NameEn);
}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(nameof(ERP.Web.UI.Controllers.HR.HrPersonVacationsController.PostHrPersonVacations), "HrPersonVacations",
            new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            <div class="row clearfix">
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.OperationNumber, new { @class = "form-control", @disabled = true })
                            @Html.LabelFor(z => z.OperationNumber, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.OperationDate, new { @class = "form-control datepicker" })
                            @Html.LabelFor(z => z.OperationDate, new { @class = "form-label label-required" })
                        </div>
                        @Html.ValidationMessageFor(z => z.OperationDate)
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model == null || Model.FndStatusLkp == null)
                            {
                                @Html.TextBoxFor(z => z.StatusLkpId, new { @class = "form-control", @disabled = true })
                                @Html.LabelFor(z => z.StatusLkpId, new { @class = "form-label" })
                            }
                            else if (lang == "ar-EG")
                            {
                                @Html.TextBoxFor(z => z.FndStatusLkp.NameAr, new { @class = "form-control", @disabled = true })
                                @Html.LabelFor(z => z.StatusLkpId, new { @class = "form-label" })
                            }
                            else
                            {
                                @Html.TextBoxFor(z => z.FndStatusLkp.NameEn, new { @class = "form-control", @disabled = true })
                                @Html.LabelFor(z => z.StatusLkpId, new { @class = "form-label" })
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-4">
                    @Html.LabelFor(z => z.HrPersonId, new { @class = "form-label label-required" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.HrPersons != null)
                            {
                                var list = new List<FndLookupValuesVM> { new FndLookupValuesVM { Id = Model.HrPersonId, NameAr = Model.HrPersons.FullName, NameEn = Model.HrPersons.FullName } };

                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.HrPersonId);

                                @Html.DropDownListFor(z => z.HrPersonId, selectList, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.HrPersonId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }

                            @Html.ValidationMessageFor(z => z.HrPersonId)
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    @Html.LabelFor(z => z.HrVacationsTypeId, new { @class = "form-label label-required" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.HrVacationsTypes != null)
                            {
                                var list = new List<FndLookupValuesVM> { new FndLookupValuesVM { Id = Model.HrVacationsTypeId, NameAr = Model.HrVacationsTypes.VacationsTypeName, NameEn = Model.HrVacationsTypes.VacationsTypeName } };

                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.HrVacationsTypeId);

                                @Html.DropDownListFor(z => z.HrVacationsTypeId, selectList, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.HrVacationsTypeId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }

                            @Html.ValidationMessageFor(z => z.HrVacationsTypeId)
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.VacationBalance, new { @class = "form-control", @disabled = true })
                            @Html.LabelFor(z => z.VacationBalance, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.StartDate, new { @class = "form-control datepicker" })
                            @Html.LabelFor(z => z.StartDate, new { @class = "form-label label-required" })
                        </div>
                        @Html.ValidationMessageFor(z => z.StartDate)
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.EndDate, new { @class = "form-control datepicker" })
                            @Html.LabelFor(z => z.EndDate, new { @class = "form-label label-required" })
                        </div>
                        @Html.ValidationMessageFor(z => z.EndDate)
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.NoOfDays, new { @class = "form-control", @disabled = true })
                            @Html.LabelFor(z => z.NoOfDays, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextAreaFor(z => z.Notes, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Notes, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
<script>
    $('#Notes').parent('.form-line').addClass('focused');

    $('<b class="text-danger"> * </b>').appendTo('.label-required');

    $('#HrPersonId').select2(ReturnSelect2ObjectDefault(`${baseUrl}/HrPersons/GetPersonsSelect2`));
    $('#HrVacationsTypeId').select2(ReturnSelect2ObjectDefault(`${baseUrl}/HrPersonVacations/GetHrVacationsTypesSelect2`));

    $('#StartDate').on('change keyup', function () { CalcNoOfDays(); });
    $('#EndDate').on('change keyup', function () { CalcNoOfDays(); });

    $('#HrPersonId').on('change', function (e) { GetVacationsBalance() });
    $('#HrVacationsTypeId').on('change', function (e) { GetVacationsBalance() });

</script>