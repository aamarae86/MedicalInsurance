@using ERP.ResourcePack.Accounts
@model ERP._System.__ReportsPms.Input.PmContractsHelperInput
@{
    ViewBag.Title = ReportsAccounts.FaAssetList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card">
        <div class="header d-flex justify-content-start align-items-center">
            <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
            <h2><strong>@ReportsAccounts.FaAssetList</strong></h2>
        </div>
        <div class="body  collapse show"  id="searchCollapse">
            <div class="row clearfix">
                <div class="col-sm-4">
                    <label class="form-label">@ReportsAccounts.Category</label>
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.PmActivityId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line text-center">
                            @Html.TextBoxFor(z => z.ContractStartDate, new { @class = "form-control" })
                            <label class="form-label">@ReportsAccounts.Asset</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="form-label">@ReportsAccounts.StatusLKkpId</label>
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.StatusLKkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line text-center">
                            @Html.TextBoxFor(z => z.FromDate, new { @class = "form-control datepicker" })
                            <label class="form-label">@ReportsAccounts.FromBuyingDate</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line text-center">
                            @Html.TextBoxFor(z => z.ToDate, new { @class = "form-control datepicker" })
                            <label class="form-label">@ReportsAccounts.ToBuyingDate</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-12 text-center">
                    <div class="form-group">
                        <button id="btnPrint" onclick="return PrintTmCharityBoxListReport()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section scripts{
    @Html.Partial("~/ViewsScripts/_ReportsAccounts/FaAssetListScripts.cshtml")
    @Html.Partial("_ReportModal")
}