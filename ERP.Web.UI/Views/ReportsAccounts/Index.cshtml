@using ERP.ResourcePack.Accounts
@model List<ERP.Web.UI.Models.ViewModels.Accounts.GlAccHeadersVM>
@{
    ViewBag.Title = ReportsAccounts.AccountStatment;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card">
        <div class="header d-flex justify-content-start align-items-center">
            <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
            <h2><strong>@ReportsAccounts.AccountStatment</strong></h2>
        </div>
        <div class="body  collapse show"  id="searchCollapse">
            <div class="row clearfix">
                @Html.Action(nameof(ERP.Web.UI.Controllers.Accounts.GlAccDetailsController.DrawGlAccController), "GlAccDetails",
                 new { glAccHeadersVMs = Model, repeatTrigger = "" })
                <div class="col-md-3 gl-controller">
                    <label>@ERP.ResourcePack.Accounts.GlAccHeaders.ToAccount</label>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <select class="form-control" id="AccId0"></select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" name="fromDate" id="fromDate" class="form-control datepicker" />
                            <label class="form-label">@ReportsAccounts.FromDate</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" name="toDate" id="toDate" class="form-control datepicker" />
                            <label class="form-label">@ReportsAccounts.ToDate</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-12 text-center">
                    <div class="form-group">
                        <button id="btnPrint" onclick="return PrintAccountStatementReport()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section scripts{
    @Html.Partial("~/ViewsScripts/_ReportsAccounts/ReportsAccountsScripts.cshtml")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScriptManager.cshtml")
    @Html.Partial("_ReportModal")
}