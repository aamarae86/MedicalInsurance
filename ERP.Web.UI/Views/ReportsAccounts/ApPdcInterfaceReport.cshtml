@using ERP.ResourcePack.Accounts
@{
    ViewBag.Title = ReportsAccounts.ApPdcInterface;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@ReportsAccounts.ApPdcInterface</strong></h2>
    </div>
    <div class="body  collapse show" id="searchCollapse">
        <div class="row clearfix">

            <div class="col-md-4">
                <label class="form-label" for="BankAccountId">@ReportsAccounts.BankName</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <select class="form-control" name="BankAccountId" id="BankAccountId"></select>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input type="text" name="fromDate" id="fromDate" class="form-control datepicker" />
                        <label class="form-label">@ReportsAccounts.FromDate</label>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input type="text" name="toDate" id="toDate" class="form-control datepicker" />
                        <label class="form-label">@ReportsAccounts.ToDate</label>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group form-float">
                    <label class="form-label" for="StatusLkpId">@ERP.ResourcePack.Accounts.ArSecurityDepositInterface.StatusLkpId</label>
                    <div class="form-group">
                        <select class="form-control" name="StatusLkpId" id="StatusLkpId"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12 text-center">
                <div class="form-group">
                    <button id="btnPrint" onclick="return PrintApPdcInterfaceReport()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.Print</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Html.Partial("~/ViewsScripts/_ReportsAccounts/ApPdcInterfaceReportScripts.cshtml")
    @Html.Partial("_ReportModal")
}