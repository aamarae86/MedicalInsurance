@using ERP.ResourcePack.Accounts
@using ERP.Web.UI.Models.ViewModels.Accounts
@model ArCustomersVM

<div class="card" id="searchBox">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@ArCustomers.Title</strong> -  @ArCustomers.SearchForm</h2>
        @*<ul class="header-dropdown m-r--5">
            <li class="dropdown">
                <button type="button" class="btn btn-success btn-border-radius m-l-15 waves-effect" onclick="return LoadDataGrid()">
                    @ERP.ResourcePack.Common.Settings.BtnSearch
                </button>
                <a href="javascript:void(0)" class="btn btn-danger btn-border-radius" onclick="return clearSearchForm()" role="button" aria-haspopup="true" aria-expanded="false">
                    @ERP.ResourcePack.Common.Settings.BtnClear
                </a>
            </li>
        </ul>*@
    </div>
    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.CustomerNumber, new { @class = "form-control" })
                        @Html.LabelFor(z => z.CustomerNumber, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.CustomerNameAr, new { @class = "form-control" })
                        @Html.LabelFor(z => z.CustomerNameAr, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.CustomerNameEn, new { @class = "form-control" })
                        @Html.LabelFor(z => z.CustomerNameEn, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(z => z.StatusLkpId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.StatusLkpId, Enumerable.Empty<SelectListItem>(), new { @Id="StatusLkpIdSearch",@class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end mb-3">
            <button type="button" class="btn btn-success btn-border-radius mx-2 waves-effect" onclick="return LoadDataGrid()">
                @ERP.ResourcePack.Common.Settings.BtnSearch
            </button>
            <a href="javascript:void(0)" class="btn btn-danger btn-border-radius" onclick="return clearSearchForm()" role="button" aria-haspopup="true" aria-expanded="false">
                @ERP.ResourcePack.Common.Settings.BtnClear
            </a>
        </div>
    </div>
</div>