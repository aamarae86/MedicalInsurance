@using ERP.Web.UI.Models.ViewModels.Accounts
@model ArCustomersVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string lkpKeyDdl = lang == "ar-EG" ? nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameAr) : nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameEn);

}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(
            nameof(ERP.Web.UI.Controllers.Accounts.ArCustomersController.PostArCustomers), "ArCustomers",
            new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            @Html.HiddenFor(z => z.Lang, new { Value = lang })
            <div class="row clearfix">
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model == null || Model.FndLookupValuesSource == null)
                            {
                                @Html.TextBoxFor(z => z.Source, new { @class = "form-control", @readonly = "readonly" })
                                @Html.LabelFor(z => z.SourceCodeLkpId, new { @class = "form-label" })
                            }
                            else if (lang == "ar-EG")
                            {
                                @Html.TextBoxFor(z => z.FndLookupValuesSource.NameAr, new { @class = "form-control", @readonly = "readonly" })
                                @Html.LabelFor(z => z.SourceCodeLkpId, new { @class = "form-label" })
                            }
                            else
                            {
                                @Html.TextBoxFor(z => z.FndLookupValuesSource.NameEn, new { @class = "form-control", @readonly = "readonly" })
                                @Html.LabelFor(z => z.SourceCodeLkpId, new { @class = "form-label" })
                            }
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.CustomerNameAr, new { @class = "form-control" })
                            @Html.LabelFor(z => z.CustomerNameAr, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.CustomerNameAr)
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.CustomerNameEn, new { @class = "form-control" })
                            @Html.LabelFor(z => z.CustomerNameEn, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.CustomerNameEn)
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Email, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Email, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.Email)
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Address, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Address, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Fax, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Fax, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.HomeTel, new { @class = "form-control" })
                            @Html.LabelFor(z => z.HomeTel, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Mobile, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Mobile, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Website, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Website, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.WorkTel, new { @class = "form-control" })
                            @Html.LabelFor(z => z.WorkTel, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    @Html.LabelFor(z => z.StatusLkpId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.FndLookupValues != null)
                            {
                                var list = new List<ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM> { new ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM { Id = Model.StatusLkpId, NameAr = Model.FndLookupValues.NameAr, NameEn = Model.FndLookupValues.NameEn } };

                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.StatusLkpId);

                                @Html.DropDownListFor(z => z.StatusLkpId, selectList, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.StatusLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }

                            @Html.ValidationMessageFor(z => z.StatusLkpId)
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    @Html.LabelFor(z => z.PaymentTermsLkpId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.FndPaymentTermsLkp != null)
                            {
                                var list = new List<ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM> { new ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM { Id = Model.PaymentTermsLkpId.Value, NameAr = Model.FndPaymentTermsLkp.NameAr, NameEn = Model.FndPaymentTermsLkp.NameEn } };

                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.PaymentTermsLkpId);

                                @Html.DropDownListFor(z => z.PaymentTermsLkpId, selectList, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.PaymentTermsLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }

                            @Html.ValidationMessageFor(z => z.PaymentTermsLkpId)
                        </div>
                    </div>
                </div>







            </div>
            <div class="row clearfix">
                <div class="col-sm-4">
                    @Html.LabelFor(z => z.CustomerTypeLkpId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.FndLookupValues != null)
                            {
                                var list = new List<ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM> { new ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM { Id = Model.CustomerTypeLkpId, NameAr = Model.FndLookupValuesCustType.NameAr, NameEn = Model.FndLookupValuesCustType.NameEn } };

                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.CustomerTypeLkpId);

                                @Html.DropDownListFor(z => z.CustomerTypeLkpId, selectList, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.CustomerTypeLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }

                            @Html.ValidationMessageFor(z => z.CustomerTypeLkpId)
                        </div>
                    </div>
                </div>


                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.TaxNo, new { @class = "form-control" })
                            @Html.LabelFor(z => z.TaxNo, new { @class = "form-label" })
                        </div>
                    </div>
                </div>

                @if (formTrigger == "Update" || formTrigger == "Show")
                {
                    <div class="col-sm-4">
                        <div class="form-group form-float">
                            <div class="form-line">

                                @Html.TextBoxFor(z => z.CustomerNumber, new { @class = "form-control", @readonly = true })
                                @Html.LabelFor(z => z.CustomerNumber, new { @class = "form-label" })

                            </div>
                        </div>
                    </div>

                }
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.CreditLimit, new { @class = "form-control" })
                            @Html.LabelFor(z => z.CreditLimit, new { @class = "form-label" })
                        </div>
                    </div>
                </div>



            </div>
            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
<script>

    $('#main-modal #CustomerTypeLkpId').select2(ReturnSelect2ObjectForLkpsTypes('@ERP.Front.Helpers.Enums.Common.FndLkpsTypes.ArCustomersType.ToString()'))
    $('#main-modal #StatusLkpId').select2(ReturnSelect2ObjectForLkpsTypes('@ERP.Front.Helpers.Enums.Common.FndLkpsTypes.ArCustomersStatues.ToString()'))
    $('#main-modal #PaymentTermsLkpId').select2(ReturnSelect2ObjectForLkpsTypes('@ERP.Front.Helpers.Enums.Common.FndLkpsTypes.CustomerPaymentTerms.ToString()'));

</script>
