@using ERP.ResourcePack.AidModule
@using ERP.Web.UI.Models.ViewModels.AidModule
@model ScFndAidRequestTypeVM

<div class="card" id="searchBox">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@ScFndAidRequestType.Title</strong> -  @ScFndAidRequestType.SearchForm</h2>
    </div>
    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-4">
                @Html.LabelFor(z => z.AidRequestTypeLkpId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.AidRequestTypeLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control",@id= "AidRequestTypeLkpIdSearch" })
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <p>
                    <label>
                        <input type="checkbox" id="IsMaintenance" />
                        <span>@Html.LabelFor(z => z.IsMaintenance)</span>
                    </label>
                </p>
            </div>
            <div class="col-sm-2">
                <p>
                    <label>
                        <input type="checkbox" id="IsElectronics" />
                        <span>@Html.LabelFor(z => z.IsElectronics)</span>
                    </label>
                </p>
            </div>
            <div class="col-sm-2">
                <p>
                    <label>
                        <input type="checkbox" id="IsAll" checked />
                        <span>@Html.LabelFor(z => z.IsAll)</span>
                    </label>
                </p>
            </div>
        </div>
        <div class="d-flex justify-content-end mb-3">
            <button type="button" class="btn btn-success btn-border-radius mx-2 waves-effect" onclick="return LoadDataGrid()">
                @ERP.ResourcePack.Common.Settings.BtnSearch
            </button>
            <a href="javascript:void(0)" class="btn btn-danger btn-border-radius" onclick="return clearSearchForm()" role="button" aria-haspopup="true" aria-expanded="false">
                @ERP.ResourcePack.Common.Settings.BtnClear
            </a>
        </div>
    </div>
</div>