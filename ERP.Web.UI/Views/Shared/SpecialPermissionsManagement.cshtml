
@model ERP.Web.UI.Models.ViewModels.General.SpecialPermissionVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> specialPermissions = (List<string>)TempData["SpecialPermissions"];
}

@using (Ajax.BeginForm(
    nameof(ERP.WebUI.Controllers.Base.BaseController.PostSpecialPermissions), "ScCommittee",
    new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
{
    <div class="row clearfix">
        <div class="col-sm-6">
            @Html.LabelFor(z => z.UserId, new { @class = "form-label" })
            <div class="form-group form-float">
                <div class="form-line">
                    @Html.DropDownListFor(z => z.UserId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(z => z.UserId)
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-sm-4">
            <p>
                <label>
                    <input type="checkbox" onclick="PostAction.value = $('#HasPostActionAlt').is(':checked')" id="@nameof(Model.HasPostActionAlt)" name="@nameof(Model.HasPostActionAlt)" />
                    <span>@Html.LabelFor(z => z.PostAction)</span>
                </label>
            </p>
            <input type="hidden" id="@nameof(Model.PostAction)" name="@nameof(Model.PostAction)" @*value="Pages.ScCommittee.Detail.Post"*@ />
        </div>
        <div class="col-sm-4">
            <p>
                <label>
                    <input type="checkbox" onclick="PostponeAction.value = $('#HasPostponeActionAlt').is(':checked')" id="@nameof(Model.HasPostponeActionAlt)" name="@nameof(Model.HasPostponeActionAlt)" />
                    <span>@Html.LabelFor(z => z.PostponeAction)</span>
                </label>
            </p>
            <input type="hidden" id="@nameof(Model.PostponeAction)" name="@nameof(Model.PostponeAction)" @*value="Pages.ScCommittee.Detail.Postpone"*@ />
        </div>
        <div class="col-sm-4">
            <p>
                <label>
                    <input type="checkbox" onclick="RejectAction.value = $('#HasRejectActionAlt').is(':checked')" id="@nameof(Model.HasRejectActionAlt)" name="@nameof(Model.HasRejectActionAlt)" />
                    <span>@Html.LabelFor(z => z.RejectAction)</span>
                </label>
            </p>
            <input type="hidden" id="@nameof(Model.RejectAction)" name="@nameof(Model.RejectAction)" @*value="Pages.ScCommittee.Detail.Reject"*@ />
        </div>
    </div>
}
<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="text-center">
                    <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                <a href="~/SpBeneficent" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        let formView = true;
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/SpecialPermissions/SpecialPermissionsScripts.cshtml")
