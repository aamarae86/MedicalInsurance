@{
    string currentLang = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}

<!DOCTYPE html>
<html lang="@currentLang">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title> ERP | @ViewBag.Title  </title>

    <link rel="icon" href="~/AssetsPack/SystemLogos/logofinalfavicon.ico" type="image/x-icon">
    @*<link rel="icon" href="~/AssetsPack/assets/images/favicon.ico" type="image/x-icon">*@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Cairo&display=swap" rel="stylesheet">
    <link href="~/Content/slick.css" rel="stylesheet" />
    <link href="~/Content/slick-theme.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    @if (currentLang == "ar-EG")
    {
        <style>

            body, .sidebar, .btn:not(.btn-link):not(.btn-circle) {
                font-family: 'Cairo', sans-serif !important;
            }

            .b-left {
                border-left: none;
                border-right: 1px solid rgba(0, 0, 0, .1) !important;
            }

            .main-box {
                text-align: right;
                direction: rtl;
            }

            hr {
                margin-left: -24px;
                margin-right: -33px;
            }

            .custom-control {
                padding-left: 0;
                padding-right: 1.5rem;
            }

            .custom-control-label::after, .custom-control-label::before {
                right: -1.5rem;
                left: unset;
            }
        </style>
    }
    else
    {
        <style>
            .must-fill:after {
                content: " *";
                color: red;
                font-weight: bold;
                font-size: 0.8rem;
            }
        </style>
    }
    <link href="~/AssetsPack/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" />
    <link href="~/AssetsPack/plugins/select2/css/select2.min.css" rel="stylesheet" />

    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/AssetsPack/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/Scripts/Select2Lang.js"></script>
    <script src="~/Scripts/dataTableLang.js"></script>


</head>

<body class="login-page">
    @*<div class="pattern"></div>*@
    @*<div class="slideshow">
        <div class="slider">
            <div class="item">
                <img src="~/AssetsPack/assets/images/slide-2.jpg" />
            </div>
            <div class="item">
                <img src="~/AssetsPack/assets/images/slide-2.jpg" />
            </div>
            <div class="item">
                <img src="~/AssetsPack/assets/images/slide-2.jpg" />
            </div>
            <div class="item">
                <img src="~/AssetsPack/assets/images/slide-2.jpg" />
            </div>
        </div>
    </div>*@

    <div class="vh-100 d-flex container">
        <div class="main-box m-auto">
            @RenderBody()
        </div>
    </div>

    @Html.Partial("~/ViewsScripts/CommonScripts.cshtml")
    @Html.Partial("~/ViewsScripts/AjaxControllerScript.cshtml")

    <script type="text/javascript">


        $(document).ready(function () {

            $('.slider').slick({
                draggable: false,
                arrows: false,
                dots: false,
                fade: true,
                autoplay: true,
                autoplaySpeed: 8000,
                speed: 900,
                infinite: true,
            });
            setTimeout(function () {
                $('.slider').slick('slickGoTo', 1);
            }, 1000);

        });

    </script>
    <script src="~/AssetsPack/assets/js/app.min.js"></script>
    <script src="~/AssetsPack/assets/js/pages/examples/pages.js"></script>
    <script type="text/javascript" src="~/Scripts/slick.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>