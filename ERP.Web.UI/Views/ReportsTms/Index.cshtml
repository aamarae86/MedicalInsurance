@using ERP.ResourcePack.CharityBoxes
@model ERP.Web.UI.Models.ViewModels.CharityBoxes.TmCharityBoxListVM
@{
    ViewBag.Title = ReportsTms.TmCharityBoxList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card">
        <div class="header d-flex justify-content-start align-items-center">
            <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
            <h2><strong>@ReportsTms.TmCharityBoxList</strong></h2>
        </div>
        <div class="body  collapse show"  id="searchCollapse">
            <div class="row clearfix">
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.CharityBoxBarcode, new { @class = "form-control" })
                            @Html.LabelFor(z => z.CharityBoxBarcode, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="form-label">@ReportsTms.Status</label>
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.CharityStatus, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="form-label">@ReportsTms.BoxType</label>
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.BoxTypeName, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="form-label">@ReportsTms.CharityBox</label>
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.CharityId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="form-label">@ReportsTms.City</label>
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.CityId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="form-label">@ReportsTms.Region</label>
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.RegionId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="form-label">@ReportsTms.Location</label>
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.LocationId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="form-label">@ReportsTms.LocationSub</label>
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.LocationSubId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-12 text-center">
                    <div class="form-group">
                        <button id="btnPrint" onclick="return PrintTmCharityBoxListReport()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section scripts{
    @Html.Partial("~/ViewsScripts/_ReportsTms/ReportsTmsScripts.cshtml")
    @Html.Partial("_ReportModal")
}