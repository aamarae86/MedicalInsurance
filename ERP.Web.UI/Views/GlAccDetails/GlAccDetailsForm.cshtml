@using ERP.Web.UI.Models.ViewModels.Accounts
@model GlAccDetailsVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string lkpKeyDdl = lang == "ar-EG" ? nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameAr) : nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameEn);
}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(
            nameof(ERP.Web.UI.Controllers.Accounts.GlAccDetailsController.PostGlAccDetails), "GlAccDetails",
            new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            @Html.HiddenFor(z => z.UpdateParentId, new { Value = Model == null ? 0 : Model.ParentId })
            <div class="row clearfix">
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Code, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Code, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.Code)
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.NameAr, new { @class = "form-control" })
                            @Html.LabelFor(z => z.NameAr, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.NameAr)
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.NameEn, new { @class = "form-control" })
                            @Html.LabelFor(z => z.NameEn, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.NameEn)
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    @Html.LabelFor(z => z.GlAccHeaderId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.GlAccHeader != null)
                            {
                                var list = new List<ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM> { new ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM { Id = Model.GlAccHeaderId, NameAr = Model.GlAccHeader.NameAr, NameEn = Model.GlAccHeader.NameEn } };

                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.GlAccHeaderId);

                                @Html.DropDownListFor(z => z.GlAccHeaderId, selectList, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.GlAccHeaderId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }

                            @Html.ValidationMessageFor(z => z.GlAccHeaderId)
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    @Html.LabelFor(z => z.ParentId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.GlAccDetail != null)
                            {
                                var list = new List<GlAccDetailsVM> { new GlAccDetailsVM { Id = (long)Model.ParentId, NameAr = Model.GlAccDetail.NameAr, NameEn = Model.GlAccDetail.NameEn } };
                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.ParentId);

                                @Html.DropDownListFor(z => z.ParentId, selectList, new { @class = "form-control", @disabled = true })
                            }
                            else if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString())
                            {
                                @Html.DropDownListFor(z => z.ParentId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.ParentId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control", @readonly = "readonly" });
                            }
                        </div>
                    </div>
                </div>

            </div>
            <div class="row clearfix">
                <div class="col-md-12">
                    @if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <p>
                            @if (Model.IsDefault)
                            {
                                <i class="fas fa-check text-success fa-2x"></i>
                            }
                            else
                            {
                                <i class="fas fa-times text-danger fa-2x"></i>
                            }
                            <span>@Html.LabelFor(z => z.IsDefault)</span>
                        </p>
                    }
                    else if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Update.ToString())
                    {
                        <p>
                            <label>
                                @if (Model.IsDefault)
                                {
                                    <input type="checkbox" onclick="mainForm.IsDefault.value = $('#IsDefaultAlt').is(':checked')" checked id="@nameof(Model.IsDefaultAlt)" name="@nameof(Model.IsDefaultAlt)" />
                                }
                                else
                                {
                                    <input type="checkbox" onclick="mainForm.IsDefault.value = $('#IsDefaultAlt').is(':checked')" id="@nameof(Model.IsDefaultAlt)" name="@nameof(Model.IsDefaultAlt)" />
                                }
                                <span>@Html.LabelFor(z => z.IsDefault)</span>
                            </label>
                        </p>
                    }
                    else
                    {
                        <p>
                            <label>
                                <input type="checkbox" onclick="mainForm.IsDefault.value = $('#IsDefaultAlt').is(':checked')" id="@nameof(Model.IsDefaultAlt)" name="@nameof(Model.IsDefaultAlt)" />
                                <span>@Html.LabelFor(z => z.IsDefault)</span>
                            </label>
                        </p>
                    }

                    <input type="hidden" id="@nameof(Model.IsDefault)" name="@nameof(Model.IsDefault)" value="@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? "true" : Model.IsDefault.ToString())" />
                </div>
            </div>

            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
<script>

    $('#main-modal #GlAccHeaderId')
        .select2(ReturnSelect2ObjectCustomParams(`${baseUrl}/GlAccHeaders/GetGlAccHeadersSelect2`, { trigger: '', updatedId: '' }),
        );

    $('#main-modal #ParentId').select2({
        ajax: {
            url: `${baseUrl}/GlAccDetails/GetGlAccHeaderDetailsSelect2`,
            dataType: 'json',
            headers: {
                'Authorization': `Bearer ${$_token}`
            },
            data: function (params) {
                const cascadedVal = $('#main-modal #GlAccHeaderId').find(':selected').val();

                if (!cascadedVal)
                    return;

                params.page = params.page || 1;
                return {
                    glheaderId: $('#main-modal #GlAccHeaderId').find(':selected').val(),
                    pageSize: pageSize,
                    pageNumber: params.page,
                    searchTerm: params.term,
                    lang: lang,
                };
            },
            processResults: function (data, params) {

                params.page = params.page || 1;

                return {
                    results: data.result.results,
                    pagination: {
                        more: (params.page * pageSize) < data.result.total
                    }
                };
            }
        },
        placeholder: select2Placeholder,
        minimumInputLength: 0,
        allowClear: true,
        language: select2Lang
    });

</script>
