@using ERP.Web.UI.Controllers.Accounts
@using ERP.Web.UI.Models.ViewModels.Accounts
@{
    ViewBag.Title = ERP.ResourcePack.Accounts.ArMiscReceiptHeaders.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);

    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as ArMiscReceiptHeadersVM;
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(ArMiscReceiptHeadersController.ArMiscReceiptHeadersForm), new { id = id, trigger = formTrigger, ArMiscReceiptHeadersVM = detailObj })
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#lines" data-toggle="tab" class="show active">@ERP.ResourcePack.Accounts.ArMiscReceiptHeaders.Title2</a>
                    </li>
                    <li role="presentation">
                        <a href="#details" data-toggle="tab" class="show">@ERP.ResourcePack.Accounts.ArMiscReceiptHeaders.Title3</a>
                    </li>
                </ul>
                <div class="tab-content" id="MiscReceiptTaps">
                    <div role="tabpanel" class="tab-pane fade in active show" id="lines">
                        @Html.Action(nameof(ArMiscReceiptHeadersController.ArMiscReceiptHeadersFormDetail), new { id = id, trigger = formTrigger, glAccHeadersVMs = ViewData["ListGlAccHeadersVM"] == null ? new List<GlAccHeadersVM>() : ViewData["ListGlAccHeadersVM"] as List<GlAccHeadersVM> })
                        @Html.Action(nameof(ArMiscReceiptHeadersController.ArMiscReceiptHeadersDataDetail))
                    </div>
                    <div role="tabpanel" class="tab-pane fade in  " id="details">
                        @Html.Action(nameof(ArMiscReceiptHeadersController.ArMiscReceiptHeadersFormDetail2), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(ArMiscReceiptHeadersController.ArMiscReceiptHeadersDataDetail2))
                    </div>
                </div>
                <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/ArMiscReceiptHeaders" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';
        let formView = true;
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/ArMiscReceiptHeaders/ArMiscReceiptHeadersScripts.cshtml")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "admin")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScriptManager.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {
                LoadArMiscReceiptDetailsData();
                LoadArMiscReceiptLinesData();

                 if (primaryEntityKeyId && trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString()' && @detailObj.PostedLkpId != @Convert.ToInt64(ERP.Front.Helpers.Enums.Common.ArMiscReceiptHeadersPost.Posted)) {
                    let btns = '';

                    btns += `<a href="javascript:void(0)" onclick="return PostAjax(@id)" class="btn btn-success">${'@ERP.ResourcePack.Common.Settings.Post'}</a>`;

                    $('#btnContainer').html(btns);

                };
            });
        </script>
    }
    else
    {
        <script>
            $('#MiscReceiptDate').val('@DateTime.Now.ToString(ERP.Helpers.Core.Formatters.DateFormat)');
        </script>
    }
}

