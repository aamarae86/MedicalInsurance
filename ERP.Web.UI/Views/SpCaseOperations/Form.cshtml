@using ERP.ResourcePack.SpGuarantees
@using ERP.Web.UI.Models.ViewModels.SpGuarantees
@model SpCaseOperationsVM
@{
    string permissions = TempData["Permissions"].ToString();
}
<div class="card">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@SpCaseOperations.Title</strong></h2>
    </div>
    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.OperationDateStr, new { @class = "form-control datepicker" })
                        @Html.LabelFor(z => z.OperationDateStr, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(z => z.ReasonLkpId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.ReasonLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group m-2">
                    @if (permissions.Contains(ERP.Authorization.PermissionNames.Pages_SpCaseOperations_Post))
                    {
                        <button id="btnCancel" class="btn btn-info" onclick="return OperateCase(@Convert.ToInt64(ERP.Front.Helpers.Enums.Common.SpCaseOperations.Cancel))">
                            @ERP.ResourcePack.SpGuarantees.SpCaseOperations.BtnCancelCase
                        </button>
                    }
                    @if (permissions.Contains(ERP.Authorization.PermissionNames.Pages_SpCaseOperations_Post))
                    {
                        <button id="btnTurnOff" class="btn btn-danger" onclick="return OperateCase(@Convert.ToInt64(ERP.Front.Helpers.Enums.Common.SpCaseOperations.TurnOff))">
                            @ERP.ResourcePack.SpGuarantees.SpCaseOperations.BtnTurnOffCase
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
