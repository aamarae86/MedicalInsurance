@using ERP.Web.UI.Controllers.AidModule
@using ERP.Web.UI.Models.ViewModels.AidModule
@{
    ViewBag.Title = ERP.ResourcePack.Accounts.ArCustomers.ScPortalRequestMgrDecision;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as ScPortalRequestMgrDecisionVM;
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(ScPortalRequestMgrDecisionController.ScPortalRequestMgrDecisionForm), new { id = id, trigger = formTrigger, ScPortalRequestMgrDecisionVM = detailObj })
    </div>
    @if (detailObj.IsElectronic)
    {
        <div class="col-12">
            <div class="card">
                <div class="body">
                    <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                        <li role="presentation">
                            <a href="#MgrDecisionElectronicAids" data-toggle="tab" class="show active">@ERP.ResourcePack.AidModule.ScCommittee.ScPRMgrDecisionElectronicAid</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active show" id="MgrDecisionElectronicAids">
                            @Html.Action(nameof(ScPortalRequestMgrDecisionController.MgrDecisionElectronicAidsForm), new { id = id, trigger = formTrigger })
                            @Html.Action(nameof(ScPortalRequestMgrDecisionController.MgrDecisionElectronicAidsData))
                        </div>
                    </div>
                    <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>
                </div>
            </div>
        </div>
    }
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>
                    <a href="~/ScPortalRequestMgrDecision" class="btn btn-danger btn-lg m-l-15 waves-effect mx-0 mt-2">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';
        let formView = true;
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/_AidModule/ScPortalRequestMgrDecision/ScPortalRequestMgrDecisionScripts.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {

                if (primaryEntityKeyId && trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString()' && @detailObj.StatusLkpId == @Convert.ToInt64(ERP.Front.Helpers.Enums.Common.ScPortalRequestMgrDecision.New) ) {

                    let btns = '';

                    btns += `<a href="javascript:void(0)" onclick="return PostAjax(@id)" class="btn btn-success mx-1">${'@ERP.ResourcePack.Common.Settings.Post'}</a>`;
                    btns += `<a href="javascript:void(0)" onclick="Refuse(@id)" data-toggle="modal" data-target="#myModal" class="btn btn-danger mx-1">${'@ERP.ResourcePack.Common.Settings.Refuse'}</a>`;

                    $('#btnContainer').html(btns);

                };
            });
        </script>

        if (detailObj.IsElectronic)
        {
            <script>
                $(function () {
                    LoadElectronicAid();
                });
            </script>
        }
    }
}
