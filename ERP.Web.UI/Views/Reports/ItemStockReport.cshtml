@{
    ViewBag.Title = "Item Stock Report";
}

@{

}
<style>
    .wedgit {
        min-height: 80px;
    }
</style>

<div class="card" id="searchBox">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>Item Stock </strong> -  Report</h2>
    </div>
    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">


            <div class="col-sm-4">
                <label for="IvItemId" class="form-label">Items</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <select id="IvItemId" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label for="IvWarehouseId" class="form-label">Warehouse</label>

                <div class="form-group form-float">
                    <div class="form-group">
                        <select id="IvWarehouseId" class="form-control"></select>
                        @*@Html.DropDownListFor(z => z.IvWarehouseId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })*@
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <label for="ShowZero" class="form-label">ShowZero</label>

                <div class="form-group form-float">
                    <div class="form-group">
                        <select id="ShowZero">
                            <option value="Y">
                                YES
                            </option>
                            <option value="N" selected="selected">
                                NO
                            </option>
                        </select>
                        @*@Html.DropDownListFor(z => z.IvWarehouseId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })*@
                    </div>
                </div>
            </div>


        </div>
        <div class="d-flex justify-content-end mb-3">
            <button type="button" class="btn btn-success btn-border-radius mx-2 waves-effect" onclick="return LoadDataGrid()">
                @ERP.ResourcePack.Common.Settings.BtnSearch
            </button>
            <a href="javascript:void(0)" class="btn btn-danger btn-border-radius" onclick="return clearSearchForm()" role="button" aria-haspopup="true" aria-expanded="false">
                @ERP.ResourcePack.Common.Settings.BtnClear
            </a>

            <button type="button" class="btn btn-info btn-border-radius mx-2 waves-effect" onclick="return printExc()">
                @ERP.ResourcePack.Common.Settings.Print
            </button>

        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header d-flex justify-content-start align-items-center">
                <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse1"></i>
                <h2><strong>Item Stock </strong> -  Data</h2>
            </div>
            <div class="body collapse show" id="searchCollapse1">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover" id="tblDetails">
                        <thead>
                            <tr>
                                <th>Item Number</th>
                                <th>Name</th>
                                <th>Qty</th>
                                <th>Warehouse Qty</th>

                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                    <div class="d-none">
                        <table class="dataTable dt-responsive no-footer nowrap table table-bordered table-striped w-100 d-none" id="tblDetailsPrint">
                            <thead></thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
        </div>
        </div>
    </div>

</div>
@section scripts{
    @Html.Partial("~/ViewsScripts/_Reports/ItemStockReportScripts.cshtml")
}
