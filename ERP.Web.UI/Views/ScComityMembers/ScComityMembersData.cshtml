@using ERP.Web.UI.Controllers.Accounts
@using ERP.ResourcePack.Accounts
@{
    string insertTrigger = ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString();
    string formAction = $"{System.Configuration.ConfigurationManager.AppSettings["PrefixHostName"].ToString()}/ScComityMembers/{nameof(ScComityMembersController.ScComityMembersForm)}";
    string insertPermissionStr = TempData["InsertPermission"].ToString();
}

<style>
    .jstree-default .jstree-anchor{
        color:#000 !important;
    }
</style>

<div class="row no-gutters clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header d-flex justify-content-start align-items-center">
                <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#dataCollapse"></i>
                <h2> <strong>@ArCustomers.ScComityMembers</strong> -  @ERP.ResourcePack.Common.Settings.Data </h2>
                <ul class="header-dropdown m-r--5">
                    @if (insertPermissionStr.Contains(ERP.Authorization.PermissionNames.Pages_ScComityMembers_Insert))
                    {
                    <li class="dropdown">
                            <button id="btnAddAdd" onclick="AjaxController.GetFormModal('','@insertTrigger','@formAction','@ArCustomers.ScComityMembers');" class="btn btn-success btn-border-radius m-l-15 waves-effect">@ERP.ResourcePack.Common.Settings.BtnAddNew</button>
                        </li>
                     }
                </ul>
            </div>
            <div class="body collapse show" id="dataCollapse">
                <div class="table-responsive">
                    <div id="tblLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                    <table class="dataTable dt-responsive no-footer nowrap table table-bordered table-striped w-100" id="tblScComityMembers">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag"></i></th>
                                <th>@ArCustomers.MemberNumber</th>
                                <th>@ArCustomers.MemberName</th>
                                <th>@ArCustomers.MemberCategoryLkpId</th>
                                <th class="all"><i class="fas fa-cogs"></i></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
</div>