@using ERP.ResourcePack.Sales
@model ERP._System.__ReportsSales.Input.ArJobCardDetailsHelperInput
@{
    ViewBag.Title = ReportsSales.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@ReportsSales.ArJobCardDetails</strong></h2>
    </div>
    <div class="body  collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line text-center">
                        @Html.TextBoxFor(z => z.FromDate, new { @class = "form-control datepicker" })
                        <label class="form-label">@ReportsSales.FromDate</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line text-center">
                        @Html.TextBoxFor(z => z.ToDate, new { @class = "form-control datepicker" })
                        <label class="form-label">@ReportsSales.ToDate</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label class="form-label">@ReportsSales.ArCustomerLkpId</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.ArCustomerLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label class="form-label">@ReportsSales.JobNumberLkpId</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.JobNumberLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label class="form-label">@ReportsSales.StatusLkpId</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.StatusLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12 text-center">
                <div class="form-group">
                    <button id="btnPrint" onclick="return PrintArJobCardDetailsReport()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.Print</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Html.Partial("~/ViewsScripts/_ReportsSales/ArJobCardsDetailsScripts.cshtml")
    @Html.Partial("_ReportModal")
}