@using ERP.Web.UI.Controllers.Accounts
@using ERP.Web.UI.Models.ViewModels.Accounts

@{
    ViewBag.Title = ERP.ResourcePack.Accounts.GlJeHeaders.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);

    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as GlJeHeadersVM;
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(GlJeHeadersController.GlJeHeadersForm), new { id = id, trigger = formTrigger, glJeHeadersVM = detailObj})
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#first" data-toggle="tab" class="show active">@ERP.ResourcePack.Accounts.GlJeHeaders.DetailData</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="first">
                        @Html.Action(nameof(GlJeHeadersController.GlJeHeadersFormDetail), new { id = id, trigger = formTrigger, glAccHeadersVMs = ViewData["ListGlAccHeadersVM"] == null ? new List<GlAccHeadersVM>() : ViewData["ListGlAccHeadersVM"] as List<GlAccHeadersVM> })
                        @Html.Action(nameof(GlJeHeadersController.GlJeHeadersDataDetail))
                    </div>
                </div>
                <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">
                            @(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ?
                                ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)
                        </button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/GlJeHeaders" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>

        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';
        let formView = true;

    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/GlJeHeaders/GlJeHeadersScripts.cshtml")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScriptManager.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {
                LoadDetailGlJeLinesData();

                if (primaryEntityKeyId && trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString()' ) {
                    let btns = '';

                    if ( @detailObj.StatusLkpId != @Convert.ToInt64(ERP.Front.Helpers.Enums.Common.GlJeHeadersStatues.Posted)) {
                       btns += `<a href="javascript:void(0)" onclick="return PostAjax(@id)" class="btn btn-success">${'@ERP.ResourcePack.Common.Settings.Post'}</a>`;
                    }

                    btns += `<a href="javascript:void(0)" onclick="return CopyGlJeHeader(@id)" class="btn btn-info">${'@ERP.ResourcePack.Accounts.GlJeHeaders.Copy'}</a>`;

                    $('#btnContainer').html(btns);

                };
            });
        </script>
    }
}

