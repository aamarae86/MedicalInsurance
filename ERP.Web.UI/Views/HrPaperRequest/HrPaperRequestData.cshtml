@using ERP.ResourcePack.HR
@{
    string insertTrigger = ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString();
    string encInsertTrigger = ERP.Front.Helpers.Enums.Common.EncInsert;
    string insertPermissionStr = TempData["InsertPermission"].ToString();
}
<div class="row no-gutters clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header d-flex justify-content-start align-items-center">
                <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#dataCollapse"></i>
                <h2> <strong>@HrPersons.Title</strong>  - @ERP.ResourcePack.Common.Settings.Data </h2>

                <ul class="header-dropdown m-r--5">
                 
                    @if (insertPermissionStr.Contains(ERP.Authorization.PermissionNames.Pages_HrPaperRequest_Insert))
                    {
                        <li class="dropdown">
                            <a href="~/HrPaperRequest/FormView?id=&t=@encInsertTrigger" class="btn btn-success btn-border-radius btn-lg m-l-15 waves-effect">@ERP.ResourcePack.Common.Settings.BtnAddNew</a>
                        </li>
                    }
                </ul>

            </div>

            <div class="body collapse show" id="dataCollapse">
                <div class="table-responsive">
                    <div id="tblLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                    <table class="dataTable dt-responsive no-footer nowrap table table-bordered table-striped w-100" id="tblHrPaperRequest">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag"></i></th>
                                <th>@HrPersons.EmployeeNumber</th>
                                <th>@HrPersons.FullName</th>
                               
                                <th class="all"><i class="fas fa-cogs"></i></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <div class="d-none">
                        <table class="dataTable dt-responsive no-footer nowrap table table-bordered table-striped w-100 d-none" id="tblHrPersonsPrint">
                            <thead></thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>