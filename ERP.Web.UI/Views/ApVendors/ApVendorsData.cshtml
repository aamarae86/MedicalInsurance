@using ERP.Web.UI.Controllers.Accounts
@using ERP.ResourcePack.AccountsExtend
@{
    string insertTrigger = ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString();
    string formAction = $"{System.Configuration.ConfigurationManager.AppSettings["PrefixHostName"].ToString()}/ApVendors/{nameof(ApVendorsController.ApVendorsForm)}";
    string insertPermissionStr = TempData["InsertPermission"].ToString();
}

<div class="row no-gutters clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header d-flex justify-content-start align-items-center">
                <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#dataCollapse"></i>
                <h2> <strong>@ApVendors.Title</strong> -  @ERP.ResourcePack.Common.Settings.Data </h2>
               
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <button onclick="printExc();" class="btn btn-border-radius btn-success m-l-45 m-r-15 mr-auto waves-effect width-per-0">@ERP.ResourcePack.Common.Settings.excel</button>
                    </li>
                    @if (insertPermissionStr.Contains(ERP.Authorization.PermissionNames.Pages_ApVendors_Insert))
                    {
                        <li class="dropdown">
                            <button onclick="AjaxController.GetFormModal('','@insertTrigger','@formAction','@ApVendors.Title');" class="btn btn-success btn-border-radius m-l-15 waves-effect">@ERP.ResourcePack.Common.Settings.BtnAddNew</button>
                        </li>
                    }
                    </ul>
                
            </div>
            
            <div class="body collapse show" id="dataCollapse">
                <div class="table-responsive">
                    <div id="tblLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                    <table class="dataTable dt-responsive no-footer nowrap table table-bordered table-striped w-100" id="tblApVendors">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag"></i></th>
                                <th>@ApVendors.VendorNumber</th>
                                <th>@ApVendors.VendorNameAr</th>
                                <th>@ApVendors.VendorNameEn</th>
                                <th>@ApVendors.StatusLkpId</th>
                                <th>@ApVendors.VendorCategoryLkpId</th>
                                <th>@ApVendors.Address</th>
                                <th class="all"><i class="fas fa-cogs"></i></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                    <div class="d-none">
                    <table class="dataTable dt-responsive no-footer nowrap table table-bordered table-striped w-100 d-none" id="tblApVendorsPrint">
                        <thead></thead>
                        <tbody></tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>