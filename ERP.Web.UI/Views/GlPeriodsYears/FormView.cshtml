@using ERP.Web.UI.Controllers.Accounts
@using ERP.Web.UI.Models.ViewModels.Accounts
@{
    ViewBag.Title = ERP.ResourcePack.Accounts.GlPeriodsYears.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(GlPeriodsYearsController.GlPeriodsYearsForm),
       new
            {
                id = id,
                trigger = formTrigger,
                glPeriodsYearsVM = ViewData["DetailAsync"] == null ?
                    null :
                    ViewData["DetailAsync"] as GlPeriodsYearsVM,
                glAccHeadersVMs = ViewData["ListGlAccHeadersVM"] == null ?
                    new List<GlAccHeadersVM>() :
                    ViewData["ListGlAccHeadersVM"] as List<GlAccHeadersVM>
            })
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#first" data-toggle="tab" class="show active">@ERP.ResourcePack.Accounts.GlPeriodsYears.DetailData</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="first">
                        @Html.Action(nameof(GlPeriodsYearsController.GlPeriodsYearsFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(GlPeriodsYearsController.GlPeriodsYearsDataDetail))
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/GlPeriodsYears" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        const formView = true;
        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';

    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/GlPeriodsYears/GlPeriodsYearsScripts.cshtml")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScriptManager.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {
                LoadDetailGlPeriodsDetailsData();
            });
        </script>
    }
}

