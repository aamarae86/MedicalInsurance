@using ERP.Web.UI.Models.ViewModels.HR
@model PyElementsVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string lkpKeyDdl = lang == "ar-EG" ? nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameAr) : nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameEn);

}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(nameof(ERP.Web.UI.Controllers.HR.PyElementsController.PostPyElements), "PyElements",
            new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            @Html.HiddenFor(z => z.Lang, new { Value = lang })
            @Html.HiddenFor(z => z.codeComUtilityIds)
            @Html.HiddenFor(z => z.codeComUtilityTexts)
            @Html.HiddenFor(z => z.DebitAccountId)

            <div class="row clearfix">
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.ElementSerial, new { @class = "form-control" })
                            @Html.LabelFor(z => z.ElementSerial, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.ElementSerial)
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.ElementName, new { @class = "form-control" })
                            @Html.LabelFor(z => z.ElementName, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.ElementName)
                    </div>
                </div>
                <div class="col-sm-4">
                    @Html.LabelFor(z => z.ElementTypeLkpId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.FndLookupValuesElementTypeLkp != null)
                            {
                                var list = new List<ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM> { new ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM { Id = Model.ElementTypeLkpId, NameAr = Model.FndLookupValuesElementTypeLkp.NameAr, NameEn = Model.FndLookupValuesElementTypeLkp.NameEn } };

                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.ElementTypeLkpId);

                                @Html.DropDownListFor(z => z.ElementTypeLkpId, selectList, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.ElementTypeLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }
                        </div>
                        @Html.ValidationMessageFor(z => z.ElementTypeLkpId)
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextAreaFor(z => z.Description, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Description, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="header" style="padding:0.5rem 10px">
                <h2><strong>@ERP.ResourcePack.HR.PyElements.DebitAccountId</strong></h2>
            </div>
            <div class="row clearfix">
                @Html.Action(nameof(ERP.Web.UI.Controllers.Accounts.GlAccDetailsController.DrawGlAccController), "GlAccDetails",
                   new { glAccHeadersVMs = ViewData["ListGlAccHeadersVM"] == null ? new List<ERP.Web.UI.Models.ViewModels.Accounts.GlAccHeadersVM>() : ViewData["ListGlAccHeadersVM"] as List<ERP.Web.UI.Models.ViewModels.Accounts.GlAccHeadersVM>, repeatTrigger = "" })
            </div>
            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
@Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "")
@Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScriptManager.cshtml")

<script>
    $(function () {
        $.MyAdmin.input.activate();
    })

    $('#main-modal #ElementTypeLkpId').select2(ReturnSelect2ObjectForLkpsTypes('HrElementType'))

    $('#main-modal .modal-footer button[data-dismiss="modal"]').on('click', function (e) {

        e.preventDefault();

        if (window.location.href.includes('PyElements'))  window.location.reload();

    });

    $('#main-modal .modal-header button[data-dismiss="modal"]').on('click', function (e) {

        e.preventDefault();

        if (window.location.href.includes('PyElements'))  window.location.reload();

    });


    $('#btnSubmition').on('click', function () {

        const resultCodeComUtilitycr = GetCodeComUtilites(__arrGlSelect2, 'AccId');

        $('#mainForm #@nameof(Model.codeComUtilityIds)').val(resultCodeComUtilitycr.idsStr);
        $('#mainForm #@nameof(Model.codeComUtilityTexts)').val(resultCodeComUtilitycr.textsStr);

        $('#mainForm').submit();

    });

</script>

@if (Model != null && !string.IsNullOrEmpty(Model.codeComUtilityIds) && !string.IsNullOrEmpty(Model.codeComUtilityTexts))
{
    <script>
        BindCodeComUtilitesDropDowns(__arrGlSelect2, 'AccId', $('#codeComUtilityIds').val(), $('#codeComUtilityTexts').val());
    </script>
}

