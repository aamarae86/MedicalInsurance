@using ERP.Web.UI.Models.ViewModels.General
@model FndTaxTypeVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(
            nameof(ERP.Web.UI.Controllers.Accounts.FndTaxTypeController.PostFndTaxType), "FndTaxType",
            new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.TaxTypeNumber, new { @class = "form-control", @readonly = "readonly" })
                            @Html.LabelFor(z => z.TaxTypeNumber, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.TaxNameAr, new { @class = "form-control" })
                            @Html.LabelFor(z => z.TaxNameAr, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.TaxNameAr)
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.TaxNameEn, new { @class = "form-control" })
                            @Html.LabelFor(z => z.TaxNameEn, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.TaxNameEn)
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Percentage, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Percentage, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.Percentage)
                    </div>
                </div>
            </div>
            if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
            {
                <div class="row clearfix">
                    <div class="form-group text-center form-float">
                        <button type="button" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    </div>
                </div>
                }
            }
        </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>




<script>




    $('#btnSubmition').on('click', function () {
        debugger;
        const _mainForm = $('#mainForm');
              _mainForm.submit();

                    if (_mainForm.valid()) {

                        $(this).hide();
                        $('#submitLoader').show();

                    } else {

                        $(this).show();
                        $('#submitLoader').hide();

                    }
        });

</script>
