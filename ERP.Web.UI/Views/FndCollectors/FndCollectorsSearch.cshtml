    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.CollectorNumber, new { @Id = "CollectorNumberSearch", @class = "form-control" })
                        @Html.LabelFor(z => z.CollectorNumber, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.CollectorNameAr, new { @Id = "CollectorNameArSearch", @class = "form-control" })
                        @Html.LabelFor(z => z.CollectorNameAr, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.CollectorNameEn, new { @Id = "CollectorNameEnSearch", @class = "form-control" })
