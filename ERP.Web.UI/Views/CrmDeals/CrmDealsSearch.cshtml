@using ERP.ResourcePack.CRM.Deals
@using ERP.Web.UI.Models.ViewModels.CRM.Deals
@model CrmDealsVM
<div class="card" id="searchBox">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@deals.Title</strong> -  @ERP.ResourcePack.Accounts.ArReceipts.SearchForm</h2>
    </div>
    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.DealDate, new { @class = "form-control datepicker" })
                        @Html.LabelFor(z => z.DealDate, new { @class = "form-label" })
                    </div>
                </div>
            </div>



            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.DealName, new { @class = "form-control" })
                        @Html.LabelFor(z => z.DealName, new { @class = "form-label" })
                    </div>
                </div>
            </div>

            <div class="col-sm-3">
                @Html.LabelFor(z => z.DealTypeLkpId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.DealTypeLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-sm-3">
                @Html.LabelFor(z => z.StageLkpID, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.StageLkpID, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-sm-3">
                @Html.LabelFor(z => z.CrmLeadsPersonsId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.CrmLeadsPersonsId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.Company, new { @class = "form-control" })
                        @Html.LabelFor(z => z.Company, new { @class = "form-label" })
                    </div>
                </div>
            </div>



        </div>
        <div class="d-flex justify-content-end mb-3">
            <button type="button" class="btn btn-success btn-border-radius mx-2 waves-effect" onclick="return LoadDataGrid()">
                @ERP.ResourcePack.Common.Settings.BtnSearch
            </button>
            <a href="javascript:void(0)" class="btn btn-danger btn-border-radius" onclick="return clearSearchForm()" role="button" aria-haspopup="true" aria-expanded="false">
                @ERP.ResourcePack.Common.Settings.BtnClear
            </a>
        </div>
    </div>
</div>