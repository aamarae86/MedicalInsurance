@using ERP.Web.UI.Controllers.CRM
@using ERP.Web.UI.Models.ViewModels.CRM.Deals
@{
    ViewBag.Title = ERP.ResourcePack.CRM.Deals.deals.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as CrmDealsVM;
}


<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(CrmDealsController.CrmDealsForm), new { id = id, trigger = formTrigger, CrmDealsVM = detailObj })
    </div>


    <div class="col-12">
        <div class="card">
            <div class="body">
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#crmdeals-attachemnts" data-toggle="tab" class="">@ERP.ResourcePack.Common.Menu.Attachments</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="crmdeals-attachemnts">
                        @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                        {
                            @Html.Partial("_AttachmentForm")
                        }
                        @Html.Partial("_AttachmentsData")
                    </div>
                </div>
                <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>
            </div>
        </div>
    </div>


    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/CrmDeals" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>

        </div>
    </div>
</div>

@section scripts{
    <script>
        const primaryEntityKeyId =  @(id ?? 0);
        const trigger = '@formTrigger';
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    @Html.Partial("~/ViewsScripts/_CRM/CrmDealsScripts.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {                
                LoadAttachments();           
            });

        </script>
    }
}   