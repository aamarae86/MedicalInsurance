        BindCodeComUtilitesDropDowns(accDeprenAccount__arrGlSelect2, 'accDeprenAccountAccId', $('#codeComUtilityIds_alt2').val(), $('#codeComUtilityTexts_alt2').val());
    </script>
}

@if (Model != null && !string.IsNullOrEmpty(Model.codeComUtilityIds_alt3) && !string.IsNullOrEmpty(Model.codeComUtilityTexts_alt3))
