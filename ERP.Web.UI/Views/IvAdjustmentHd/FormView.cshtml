@using ERP.Web.UI.Controllers.Warehouses
@using ERP.Web.UI.Models.ViewModels.Warehouses
@{
    ViewBag.Title = ERP.ResourcePack.Warehouses.IvAdjustmentHd.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";

    string formTrigger = ViewBag.trigger;

    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);

    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as IvAdjustmentHdVM;
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(IvAdjustmentHdController.IvAdjustmentHdForm), new { id = id, trigger = formTrigger, IvAdjustmentHdVM = detailObj })
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#units" data-toggle="tab" class="show active">@ERP.ResourcePack.Warehouses.IvAdjustmentHd.Title1</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="units">
                        @Html.Action(nameof(IvAdjustmentHdController.IvAdjustmentHdFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(IvAdjustmentHdController.IvAdjustmentHdDataDetail))
                    </div>
                </div>
                <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="button" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }

                    <a href="~/IvAdjustmentHd" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';
        let formView = true;
        
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/_Warehouses/IvAdjustmentHd/IvAdjustmentHdScripts.cshtml")
    <script>
        if (!primaryEntityKeyId) {
            GetAdjustmentHdAdjustmentStoredEntryType();
        }
    </script>
    @if (id != null)
    {
        <script>
            $(function () {
                LoadUnitsData();
            });

            if (primaryEntityKeyId && trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString()' && @detailObj.StatusLkpId == 767) {

                let btns = '';

                btns += `<a href="javascript:void(0)" onclick="return PostAjax(@id)" class="btn btn-success">${'@ERP.ResourcePack.Common.Settings.Post'}</a>`;

                $('#btnContainer').html(btns);
            };

            ChangeAdjustmentTypeLkpLabelText($(`#AdjustmentTypeLkpId`).find(':selected').val());
        </script>
    }
}

