@using ERP.Web.UI.Controllers.PmPropertiesModule
@using ERP.Web.UI.Models.ViewModels.PmPropertiesModule
@{
    ViewBag.Title = ERP.ResourcePack.PmPropertiesModule.PmOwners.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as PmOwnersVM;
}


<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(PmOwnersController.PmOwnersForm), new { id = id, trigger = formTrigger, PmOwnersVM = detailObj })
    </div>
    <div class="row clearfix">
        <div class="col-md-12 text-center" id="btnPostOrRefuseOwnerContainer"></div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <div class="header">
                    <h2><strong>@ERP.ResourcePack.PmPropertiesModule.PmOwners.DetailData</strong></h2>
                </div>
                @*<ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#first" data-toggle="tab" class="show active">@ERP.ResourcePack.PmPropertiesModule.PmOwners.DetailData</a>
                    </li>
                </ul>*@
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="first">
                        @Html.Action(nameof(PmOwnersController.PmOwnersFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(PmOwnersController.PmOwnersDataDetail))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/PmOwners" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "acc2")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "acc3")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "acc4")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScriptManager.cshtml")
    @Html.Partial("~/ViewsScripts/_PmPropertiesModule/PmOwners/PmOwnersScripts.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {
                LoadPmOwnersDetailData();
            });
        </script>
    }
    @if (detailObj != null && !string.IsNullOrEmpty(detailObj.Account.codeComUtilityIds) && !string.IsNullOrEmpty(detailObj.Account.codeComUtilityTexts))
    {
        <script>
            BindCodeComUtilitesDropDowns(__arrGlSelect2, 'AccId', '@detailObj.Account.codeComUtilityIds', '@detailObj.Account.codeComUtilityTexts');
            BindCodeComUtilitesDropDowns(acc2__arrGlSelect2, 'acc2AccId', '@detailObj.CurrentAccount.codeComUtilityIds', '@detailObj.CurrentAccount.codeComUtilityTexts');
            @*BindCodeComUtilitesDropDowns(acc3__arrGlSelect2, 'acc3AccId', '@detailObj.BankAccount.codeComUtilityIds', '@detailObj.BankAccount.codeComUtilityTexts');
            BindCodeComUtilitesDropDowns(acc4__arrGlSelect2, 'acc4AccId', '@detailObj.CashAccount.codeComUtilityIds', '@detailObj.CashAccount.codeComUtilityTexts');*@
        </script>
    }
}