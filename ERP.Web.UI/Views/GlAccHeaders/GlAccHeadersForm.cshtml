@using ERP.Web.UI.Models.ViewModels.Accounts
@model GlAccHeadersVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string lkpKeyDdl = lang == "ar-EG" ? nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameAr) : nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameEn);
    SelectList orderSelectList = new SelectList(new List<int> { 1, 2, 3, 4, 5, 6, 7, 8, 9 });
}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(
            nameof(ERP.Web.UI.Controllers.Accounts.GlAccHeadersController.PostGlAccHeaders), "GlAccHeaders",
            new AjaxOptions {  HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id="mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            <div class="row clearfix">
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.NameAr, new { @class = "form-control" })
                            @Html.LabelFor(z => z.NameAr, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.NameAr)
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.NameEn, new { @class = "form-control" })
                            @Html.LabelFor(z => z.NameEn, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.NameEn)
                    </div>
                </div>
                <div class="col-sm-4">
                    @Html.LabelFor(z => z.ShowOrder, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.DropDownListFor(z => z.ShowOrder, orderSelectList, new { @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.ShowOrder)
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    @Html.LabelFor(z => z.ParentId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.Parent != null)
                            {
                                var list = new List<GlAccHeadersVM> { new GlAccHeadersVM { Id = (long)Model.ParentId, NameAr = Model.Parent.NameAr, NameEn = Model.Parent.NameEn } };
                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.ParentId);

                                @Html.DropDownListFor(z => z.ParentId, selectList, new { @class = "form-control", @disabled = true })
                            }
                            else if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString())
                            {
                                @Html.DropDownListFor(z => z.ParentId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.ParentId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" , @disabled = true})
                            }
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    @Html.LabelFor(z => z.AttributeLkpId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.FndLookupValues != null)
                            {
                                var list = new List<ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM> { new ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM { Id =Model.AttributeLkpId , NameAr = Model.FndLookupValues.NameAr, NameEn = Model.FndLookupValues.NameEn } };

                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.AttributeLkpId);

                                @Html.DropDownListFor(z => z.AttributeLkpId, selectList, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.AttributeLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }

                            @Html.ValidationMessageFor(z => z.AttributeLkpId)
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-md-12">
                    @if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <p>
                            @if (Model.IsHide)
                            {
                                <i class="fas fa-check text-success fa-2x"></i>
                            }
                            else
                            {
                                <i class="fas fa-times text-danger fa-2x"></i>
                            }
                            <span>@Html.LabelFor(z => z.IsHide)</span>
                        </p>
                    }
                    else if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Update.ToString())
                    {
                        <p>
                            <label>
                                @if (Model.IsHide)
                                {
                                    <input type="checkbox" onclick="mainForm.IsHide.value = $('#IsHideAlt').is(':checked')" checked id="@nameof(Model.IsHideAlt)" name="@nameof(Model.IsHideAlt)" />
                                }
                                else
                                {
                                    <input type="checkbox" onclick="mainForm.IsHide.value = $('#IsHideAlt').is(':checked')" id="@nameof(Model.IsHideAlt)" name="@nameof(Model.IsHideAlt)" />
                                }
                                <span>@Html.LabelFor(z => z.IsHide)</span>
                            </label>
                        </p>
                    }
                    else
                    {
                        <p>
                            <label>
                                <input type="checkbox" onclick="mainForm.IsHide.value = $('#IsHideAlt').is(':checked')" id="@nameof(Model.IsHideAlt)" name="@nameof(Model.IsHideAlt)" />
                                <span>@Html.LabelFor(z => z.IsHide)</span>
                            </label>
                        </p>
                    }

                    <input type="hidden" id="@nameof(Model.IsHide)" name="@nameof(Model.IsHide)" />
                </div>
            </div>

            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
<script>

    $('#ShowOrder').select2();

    $('#main-modal #AttributeLkpId').select2(ReturnSelect2ObjectDefault(`${baseUrl}/FndLookupValues/GetAttributesFndLookupValuesSelect2`));

    $('#main-modal #ParentId').select2({
        ajax: {
            url: `${baseUrl}/GlAccHeaders/GetGlAccHeadersSelect2`,
            dataType: 'json',
            headers: {
                'Authorization': `Bearer ${$_token}`
            },
            data: function (params) {
                params.page = params.page || 1;
                return {
                    pageSize: pageSize,
                    pageNumber: params.page,
                    searchTerm: params.term,
                    lang: lang,
                    trigger: '@formTrigger',
                    updatedId :$('#main-modal #Id').val()
                };
            },
            processResults: function (data, params) {

                params.page = params.page || 1;

                return {
                    results: data.result.results,
                    pagination: {
                        more: (params.page * pageSize) < data.result.total
                    }
                };
            }
        },
        placeholder: select2Placeholder,
        minimumInputLength: 0,
        allowClear: true,
        language: select2Lang
    });

</script>
