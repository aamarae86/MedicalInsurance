@using ERP.Web.UI.Models.ViewModels.HR
@model HrAbsencesTypesVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string lkpKeyDdl = lang == "ar-EG" ? nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameAr) : nameof(ERP.Web.UI.Models.ViewModels.General.FndLookupValuesVM.NameEn);
}
<style>
    .jstree-default .jstree-anchor {
        color: #000 !important;
    }

    .modal-dialog.modal-lg {
        max-width: 90%;
    }
</style>
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(nameof(ERP.Web.UI.Controllers.HR.HrVacationsTypesController.PostHrAbsencesTypes), "HrAbsencesTypes",
            new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)

            <div class="row clearfix">
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.VacationsTypeNumber, new { @class = "form-control", @readonly = "readonly" })
                            @Html.LabelFor(z => z.VacationsTypeNumber, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.VacationsTypeName, new { @class = "form-control" })
                            @Html.LabelFor(z => z.VacationsTypeName, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z=>z.VacationsTypeName)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.VacationsTypeDesc, new { @class = "form-control" })
                            @Html.LabelFor(z => z.VacationsTypeDesc, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.MaximumDaysPerYear, new { @class = "form-control" })
                            @Html.LabelFor(z => z.MaximumDaysPerYear, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.MaximumDays, new { @class = "form-control" })
                            @Html.LabelFor(z => z.MaximumDays, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
<script>
    ($('#ItemQtys').val() && $('#AvgCost').val()) ? $('#Total').val(parseInt($('#ItemQtys').val()) * parseInt($('#AvgCost').val())) : $('#Total').val('');
    $('#main-modal #HrAbsencesTypesTypesConfigureId').select2(ReturnSelect2ObjectDefault(`${baseUrl}/HrAbsencesTypesTypesConfigure/GetHrAbsencesTypesTypesConfigureWithParentSelect2`));
    $('#main-modal #IvUnitId').select2(ReturnSelect2ObjectDefault(`${baseUrl}/IvUnits/GetIvUnitsSelect2`));
</script>
