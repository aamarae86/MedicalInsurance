@using ERP.ResourcePack.SpGuarantees
@using ERP.Web.UI.Models.ViewModels.SpGuarantees
@model SpCaseOperationsVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    long typeId = Convert.ToInt64(ViewData["TYPE_ID"]);
    long cancelOperationTypeId = 711, turnOffOperationTypeId = 710, replaceOperationTypeId = 724;

    if (typeId == cancelOperationTypeId)
    {
        ViewBag.Title = SpGuaranteesReports.SpCaseCancelOperationReport;
    }
    else if (typeId == turnOffOperationTypeId)
    {
        ViewBag.Title = SpGuaranteesReports.SpCaseTurnOffOperationReport;
    }
    else if (typeId == replaceOperationTypeId)
    {
        ViewBag.Title = SpGuaranteesReports.SpCaseReplaceOperationReport;
    }
}
<input type="hidden" id="typeId" value="@typeId" />

<div class="card" id="searchBox">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@ViewBag.Title</strong> -  @SpCaseOperations.SearchForm</h2>
    </div>
    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-3">
                @Html.LabelFor(z => z.BeneficentId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.BeneficentId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.BeneficentNumber, new { @class = "form-control", @disabled = "disabled" })
                        @Html.LabelFor(z => z.BeneficentNumber, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(z => z.CaseId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.CaseId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.CaseNumber, new { @class = "form-control", @disabled = "disabled" })
                        @Html.LabelFor(z => z.CaseNumber, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            @if (typeId == replaceOperationTypeId)
            {
                <div class="col-sm-3">
                    @Html.LabelFor(z => z.NewCaseId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-group">
                            @Html.DropDownListFor(z => z.NewCaseId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.NewCaseNumber, new { @class = "form-control", @disabled = "disabled" })
                            @Html.LabelFor(z => z.NewCaseNumber, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            }
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.FromDate, new { @class = "form-control datepicker" })
                        @Html.LabelFor(z => z.FromDate, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.ToDate, new { @class = "form-control datepicker" })
                        @Html.LabelFor(z => z.ToDate, new { @class = "form-label" })
                    </div>
                </div>
            </div>
        </div>
    
        <div class="row clearfix">
            <div class="col-sm-12 text-center">
                <div class="form-group">
                    <button type="button" class="btn btn-success btn-border-radius mx-2 waves-effect" id="btnSearch" onclick="return PrintSpCaseOperationReport();">
                        @ERP.ResourcePack.Common.Settings.Print
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_ReportModal")

@section scripts{
    @Html.Partial("~/ViewsScripts/_SpGuaranteesReports/SpCaseOperationsReportScripts.cshtml")
}