@using ERP.Web.UI.Controllers.SpGuarantees
@using ERP.Web.UI.Models.ViewModels.SpGuarantees
@{
    ViewBag.Title = ERP.ResourcePack.SpGuarantees.SpPayments.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as SpPaymentsVM;
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(SpPaymentsController.SpPaymentsForm), new { id = id, trigger = formTrigger, SpPaymentsVM = detailObj })
    </div>
    @if (detailObj != null && detailObj.StatusLkpId == 10986)
    {
        <div class="col-12">
            <div class="card">
                <div class="body">
                    <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                        <li role="presentation">
                            <a href="#details" data-toggle="tab" class="show active">@ERP.ResourcePack.SpGuarantees.SpPayments.SpPaymentsPerson</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active show" id="details">
                            @Html.Action(nameof(SpPaymentsController.SpPaymentsPersonData))
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>

                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/SpPayments" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="paymentsPersonsDetails" style="display:none">
    @Html.Action(nameof(SpPaymentsController.SpPaymentsPersonDetailsForm))
    @Html.Action(nameof(SpPaymentsController.SpPaymentsPersonDetailsData))
</div>
@section scripts{
    <script>
        const primaryEntityKeyId =  @(id ?? 0);
        const trigger = '@formTrigger';
        let formView = true;
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/_SpGuarantees/SpPayments/SpPaymentsScripts.cshtml")
    @if (id != null)
    {
        <script>

            if (primaryEntityKeyId && trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString()' && @detailObj.StatusLkpId == @Convert.ToInt64(ERP.Front.Helpers.Enums.Common.SpPayments.New)) {
                    let btns = '';

                btns += `<a href="javascript:void(0)" onclick="return PostAjax(@id)" class="btn btn-success">${'@ERP.ResourcePack.Common.Settings.Post'}</a>`;

                $('#btnContainer').html(btns);
            };

        </script>
    }
    @if (detailObj != null && detailObj.StatusLkpId == 10986)
    {
        <script>
            $(function () {
                LoadSpPaymentsPersonData(@detailObj.Id);
            });
        </script>
     }
}