@using ERP.Web.UI.Models.ViewModels.Accounts
@model CurrenciesVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(
            nameof(ERP.Web.UI.Controllers.Accounts.CurrenciesController.PostCurrencies), "Currencies",
            new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Code, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Code, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.Code)
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.Rate, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Rate, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.Rate)
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.DescriptionAr, new { @class = "form-control" })
                            @Html.LabelFor(z => z.DescriptionAr, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.DescriptionAr)
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.DescriptionEn, new { @class = "form-control" })
                            @Html.LabelFor(z => z.DescriptionEn, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.DescriptionEn)
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-md-6">
                    @if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <p>
                            @if (Model.IsLocalCurrency)
                            {
                                <i class="fas fa-check text-success fa-2x"></i>
                            }
                            else
                            {
                                <i class="fas fa-times text-danger fa-2x"></i>
                            }
                            <span>@Html.LabelFor(z => z.IsLocalCurrency)</span>
                        </p>
                    }
                    else if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Update.ToString())
                    {
                        <p>
                            <label>
                                @if (Model.IsLocalCurrency)
                                {
                                    <input type="checkbox" onclick="mainForm.IsLocalCurrency.value = $('#IsLocalCurrencyAlt').is(':checked')" checked id="@nameof(Model.IsLocalCurrencyAlt)" name="@nameof(Model.IsLocalCurrencyAlt)" />
                                }
                                else
                                {
                                    <input type="checkbox" onclick="mainForm.IsLocalCurrency.value = $('#IsLocalCurrencyAlt').is(':checked')" id="@nameof(Model.IsLocalCurrencyAlt)" name="@nameof(Model.IsLocalCurrencyAlt)" />
                                }
                                <span>@Html.LabelFor(z => z.IsLocalCurrency)</span>
                            </label>
                        </p>
                    }
                    else
                    {
                        <p>
                            <label>
                                <input type="checkbox" onclick="mainForm.IsLocalCurrency.value = $('#IsLocalCurrencyAlt').is(':checked')" id="@nameof(Model.IsLocalCurrencyAlt)" name="@nameof(Model.IsLocalCurrencyAlt)" />
                                <span>@Html.LabelFor(z => z.IsLocalCurrency)</span>
                            </label>
                        </p>
                    }

                    <input type="hidden" id="@nameof(Model.IsLocalCurrency)" name="@nameof(Model.IsLocalCurrency)" />
                </div>
                <div class="col-sm-6">
                    @if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <p>
                            @if (Model.IsActive)
                            {
                                <i class="fas fa-check text-success fa-2x"></i>
                            }
                            else
                            {
                                <i class="fas fa-times text-danger fa-2x"></i>
                            }
                            <span>@Html.LabelFor(z => z.IsActive)</span>
                        </p>
                    }
                    else if (formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Update.ToString())
                    {
                        <p>
                            <label>
                                @if (Model.IsActive)
                                {
                                    <input type="checkbox" onclick="mainForm.IsActive.value = $('#IsActiveAlt').is(':checked')" checked id="@nameof(Model.IsActiveAlt)" name="@nameof(Model.IsActiveAlt)" />
                                }
                                else
                                {
                                    <input type="checkbox" onclick="mainForm.IsActive.value = $('#IsActiveAlt').is(':checked')" id="@nameof(Model.IsActiveAlt)" name="@nameof(Model.IsActiveAlt)" />
                                }
                                <span>@Html.LabelFor(z => z.IsActive)</span>

                            </label>
                        </p>
                    }
                    else
                    {
                        <p>
                            <label>
                                <input type="checkbox" checked="$('#IsActive').val();" onclick="mainForm.IsActive.value = $('#IsActiveAlt').is(':checked')" id="@nameof(Model.IsActiveAlt)" name="@nameof(Model.IsActiveAlt)" />
                                <span>@Html.LabelFor(z => z.IsActive)</span>
                            </label>
                        </p>
                    }

                    <input type="hidden" id="@nameof(Model.IsActive)" name="@nameof(Model.IsActive)" value="@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? "true" : Model.IsActive.ToString())" />
                </div>
            </div>
        }

        <div class="row clearfix">
            <div class="form-group text-center form-float">
                <button type="button" id="btnSubmition"  class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                <div id="submitLoader" style="display:none">
                    <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
    
<script>




    $('#btnSubmition').on('click', function () {

        $('#IsLocalCurrencyAlt').val($('#IsLocalCurrencyAlt').is(':checked'));
        const _mainForm = $('#mainForm');

        const _localCurrency = _mainForm.find('#IsLocalCurrencyAlt');

        if (_localCurrency.is(':checked')) {
            $.ajax({
                url: `${baseUrl}/Currency/GetLocalCurrencyStatus`,
                dataType: 'json',
                headers: {
                    'Authorization': `Bearer ${$_token}`
                },
                cache: false,
                success: function (data) {
                    if (data.result == true) {

                        _mainForm.submit();

                        if (_mainForm.valid()) {

                            $(this).hide();
                            $('#submitLoader').show();

                        } else {

                            $(this).show();
                            $('#submitLoader').hide();

                        }
                    } else {
                        toastr.error('@ERP.ResourcePack.Accounts.Currencies.ErrorLocalCurrency');
                    }
                }
            });

        } else {

              _mainForm.submit();

                    if (_mainForm.valid()) {

                        $(this).hide();
                        $('#submitLoader').show();

                    } else {

                        $(this).show();
                        $('#submitLoader').hide();

                    }
        }

    });

</script>    
   

