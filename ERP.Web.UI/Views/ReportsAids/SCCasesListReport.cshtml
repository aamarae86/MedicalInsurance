@{
    ViewBag.Title = ERP.ResourcePack.Common.Menu.SCCasesListReport;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@ERP.ResourcePack.Common.Menu.SCCasesListReport</strong></h2>
    </div>
    <div class="body  collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line text-center">
                        <input type="text" id="IdNumber" class="form-control idNumber" />
                        <label class="form-label">@ERP.ResourcePack.AidModule.FndUsers.IdNumber</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label class="form-label">@ERP.ResourcePack.AidModule.FndUsers.NationalityLkpId</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <select id="NationalityLkpId" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <label class="form-label">@ERP.ResourcePack.AidModule.FndUsers.CityLkpId</label>
                <div class="form-group form-float">
                    <div class="form-group">
                        <select id="CityLkpId" class="form-control"></select>
                    </div>
                </div>

            </div>
            <div class="col-sm-4">
                <p>
                    <label>

                        <input type="checkbox" id="chkIsZakat" />

                        <span>@Html.Label(@ERP.ResourcePack.AidModule.FndUsers.IsZakat)</span>
                    </label>
                </p>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12 text-center">
                <div class="form-group">
                    <button id="btnPrint" onclick="return PrintTmCharityBoxListReport()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.Print</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Html.Partial("~/ViewsScripts/_ReportsAids/SCCasesListScripts.cshtml")
    @Html.Partial("_ReportModal")
}