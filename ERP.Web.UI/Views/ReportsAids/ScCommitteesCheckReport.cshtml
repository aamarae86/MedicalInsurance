@{
    ViewBag.Title = ERP.ResourcePack.Common.Menu.ScCommitteesCheckReport;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@ERP.ResourcePack.Common.Menu.ScCommitteesCheckReport</strong></h2>
    </div>
    <div class="body  collapse show" id="searchCollapse">
        <div class="row clearfix">
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line text-center">
                        <input type="text" id="FromDate" class="form-control datepicker" />
                        <label class="form-label">@ERP.ResourcePack.Common.Settings.FromDate</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-float">
                    <div class="form-line text-center">
                        <input type="text" id="ToDate" class="form-control datepicker" />
                        <label class="form-label">@ERP.ResourcePack.Common.Settings.ToDate</label>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        <select class="form-control" name="CityLkpId" id="CityLkpId"></select>
                        <label class="form-label" for="CityLkpId">@ERP.ResourcePack.AidModule.FndUsers.CityLkpId</label>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        <select class="form-control" name="AidRequestTypeLkpId" id="AidRequestTypeLkpId"></select>
                        <label class="form-label" for="AidRequestTypeLkpId">@ERP.ResourcePack.AidModule.ScFndAidRequestType.AidRequestTypeLkpId</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12 text-center">
                <div class="form-group">
                    <button id="btnPrint" onclick="return PrintScCommitteesCheckReport()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.Print</button>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ReportModal")
@section scripts{
    @Html.Partial("~/ViewsScripts/_ReportsAids/ScCommitteesCheckReportScript.cshtml")
}