@using ERP.Web.UI.Models.ViewModels.HR
@using ERP.Web.UI.Models.ViewModels.General
@model HrOrganizationsVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    string lkpKeyDdl = lang == "ar-EG" ? nameof(FndLookupValuesVM.NameAr) : nameof(FndLookupValuesVM.NameEn);
}
<style>
    .jstree-default .jstree-anchor {
        color: #000 !important;
    }

    .modal-dialog.modal-lg {
        max-width: 90%;
    }
</style>
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(nameof(ERP.Web.UI.Controllers.HR.HrOrganizationsController.PostHrOrganizations), "HrOrganizations", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            @Html.HiddenFor(z => z.ParentId)

            <div class="row clearfix">
                <div class="col-md-4" style="border: 2px solid #ddd;border-radius: 10px;">
                    <div class="wrapper-tree card m-0">
                        <input id="treeSearchTxt" type="search" placeholder="@ERP.ResourcePack.HR.HrOrganizations.ItemsTreeSearch" class="form-control">
                        <div id="jstreeForm"></div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.OrganizationName, new { @class = "form-control" })
                            @Html.LabelFor(z => z.OrganizationName, new { @class = "form-label" })
                        </div>
                        @Html.ValidationMessageFor(z => z.OrganizationName)
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.ShortName, new { @class = "form-control" })
                            @Html.LabelFor(z => z.ShortName, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    @Html.LabelFor(z => z.OrganizationTypeLkpId, new { @class = "form-label" })
                    <div class="form-group form-float">
                        <div class="form-line">
                            @if (Model != null && Model.FndOrganizationTypeLkp != null)
                            {
                                var list = new List<FndLookupValuesVM> { new FndLookupValuesVM { Id = Model.OrganizationTypeLkpId, NameAr = Model.FndOrganizationTypeLkp.NameAr, NameEn = Model.FndOrganizationTypeLkp.NameEn } };

                                var selectList = new SelectList(list, "Id", lkpKeyDdl, Model.OrganizationTypeLkpId);

                                @Html.DropDownListFor(z => z.OrganizationTypeLkpId, selectList, new { @class = "form-control" })
                            }
                            else
                            {
                                @Html.DropDownListFor(z => z.OrganizationTypeLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                            }
                        </div>
                        @Html.ValidationMessageFor(z => z.OrganizationTypeLkpId)
                    </div>
                </div>
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <div class="form-group form-float">
                        <div class="form-line js-frm-note">
                            @Html.TextAreaFor(z => z.Notes, new { @class = "form-control" })
                            @Html.LabelFor(z => z.Notes, new { @class = "form-label " })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.ParentPath, new { @class = "form-control", @readonly = "readonly" })
                            @Html.LabelFor(z => z.ParentId, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-info btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>
<script>
    $("#Notes").focus(function () { console.log('w'); $('.js-frm-note').addClass('focused') });
    $('#OrganizationTypeLkpId').select2(ReturnSelect2ObjectForLkpsTypes('@ERP.Front.Helpers.Enums.Common.FndLkpsTypes.HrOrganizationsOrganizationType.ToString()'))

    $("#treeSearchTxt").keyup(function () {
        $('#jstreeForm').jstree('search', $(this).val());
    });

    $('#jstreeForm').on("changed.jstree", function (e, data) {

        const path = data.instance.get_path(data.node, '/');

        $('#ParentId').val(data.node.id);
        $('#ParentPath').val(path);
        $('#ParentPath').parent('.form-line').addClass('focused');
    });

</script>
