@using ERP.Web.UI.Controllers.SpGuarantees
@using ERP.Web.UI.Models.ViewModels.SpGuarantees
@{
    ViewBag.Title = ERP.ResourcePack.SpGuarantees.SpFamilies.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(SpFamiliesController.SpFamiliesForm), new { id = id, trigger = formTrigger, SpFamiliesVM = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as SpFamiliesVM })
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#Cases" data-toggle="tab" class="show active">@ERP.ResourcePack.SpGuarantees.SpFamilies.Cases</a>
                    </li>
                    <li role="presentation">
                        <a href="#Incomes" data-toggle="tab" class="show ">@ERP.ResourcePack.SpGuarantees.SpFamilies.Incomes</a>
                    </li>
                    <li role="presentation">
                        <a href="#Duties" data-toggle="tab" class="show">@ERP.ResourcePack.SpGuarantees.SpFamilies.Duties</a>
                    </li>
                </ul>
                <div class="tab-content">
                     <div role="tabpanel" class="tab-pane fade in active show" id="Cases">
                        @Html.Action(nameof(SpFamiliesController.CasesFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(SpFamiliesController.CasesDataDetail))
                    </div>
                    <div role="tabpanel" class="tab-pane fade in " id="Incomes">
                        @Html.Action(nameof(SpFamiliesController.IncomesForm), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(SpFamiliesController.IncomesData))
                    </div>
                    <div role="tabpanel" class="tab-pane fade in" id="Duties">
                        @Html.Action(nameof(SpFamiliesController.DutiesForm), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(SpFamiliesController.DutiesData))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/SpFamilies" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        const primaryEntityKeyId =  @(id == null ? 0 : id);
        const trigger = '@formTrigger';
    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("_ReportModal")
    @Html.Partial("~/ViewsScripts/_SpGuarantees/SpFamilies/SpFamiliesScripts.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {
                LoadCasesData();
                LoadDutiesData();
                LoadIncomesData();

                $('#NetValue').val(parseFloat($('#MonthlyIncomeAmount').val()) - parseFloat($('#MonthlyOutcomeAmount').val()));

            });
        </script>
    }
}

