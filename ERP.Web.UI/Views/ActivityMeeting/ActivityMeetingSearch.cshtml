@using ERP.ResourcePack.CRM.Meetings
@using ERP.Web.UI.Models.ViewModels.CRM.meetings
@model ActivityMeetingVM

<div class="card" id="searchBox">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@activityMeeting.MasterTitle</strong> -  @ERP.ResourcePack.Accounts.ArReceipts.SearchForm</h2>
    </div>
    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">

            <div class="col-sm-3">
                @Html.LabelFor(z => z.RelatedToLkpId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(s => s.RelatedToLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-sm-3">
                @Html.LabelFor(z => z.CrmLeadsPersonsId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(s => s.CrmLeadsPersonsId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>





            <div class="col-md-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.Title, new { @class = "form-control" })
                        @Html.LabelFor(z => z.Title, new { @class = "form-label" })
                    </div>
                </div>
            </div>


            <div class="col-md-3">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.Location, new { @class = "form-control" })
                        @Html.LabelFor(z => z.Location, new { @class = "form-label" })
                    </div>
                </div>
            </div>
             
        </div>
        <div class="d-flex justify-content-end mb-3">
            <button type="button" class="btn btn-success btn-border-radius mx-2 waves-effect" onclick="return LoadDataGrid()">
                @ERP.ResourcePack.Common.Settings.BtnSearch
            </button>
            <a href="javascript:void(0)" class="btn btn-danger btn-border-radius" onclick="return clearSearchForm()" role="button" aria-haspopup="true" aria-expanded="false">
                @ERP.ResourcePack.Common.Settings.BtnClear
            </a>
        </div>
    </div>
</div>