@using ERP.Web.UI.Controllers.CRM
@using ERP.ResourcePack.CRM.activityTask
@{
    string insertTrigger = ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString();
    string formAction = $"{System.Configuration.ConfigurationManager.AppSettings["PrefixHostName"].ToString()}/ActivityTasks/{nameof(ActivityTasksController.ActivityTasksForm)}";
    string insertPermissionStr = TempData["InsertPermission"]?.ToString();
}

<div class="row no-gutters clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header d-flex justify-content-start align-items-center">
                <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#dataCollapse"></i>
                <h2> <strong>@activityTask.Title</strong> -  @ERP.ResourcePack.Common.Settings.Data </h2>
                @if (!string.IsNullOrEmpty(insertPermissionStr) && insertPermissionStr.Contains(ERP.Authorization.PermissionNames.Pages_ActivityTasks_Insert))
                {
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <button onclick="AjaxController.GetFormModal('','@insertTrigger','@formAction','@activityTask.Title');" class="btn btn-success btn-border-radius m-l-15 waves-effect">@ERP.ResourcePack.Common.Settings.BtnAddNew</button>
                        </li>
                    </ul>
                }
            </div>
            <div class="body collapse show" id="dataCollapse">
                <div class="table-responsive">
                    <div id="tblLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                    <table class="dataTable dt-responsive no-footer nowrap table table-bordered table-striped w-100" id="tblActivityTasks">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag"></i></th>
                                <th>@activityTask.RelatedToLkpId </th>
                                <th>@activityTask.CrmLeadsPersonsId </th>
                                <th>@activityTask.Subject</th>
                                <th>@activityTask.StatuesLkpId </th>
                                <th>@activityTask.DueDate </th>
                                <th class="all"><i class="fas fa-cogs"></i></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>