@using ERP.Web.UI.Controllers.SpGuarantees
@using ERP.Web.UI.Models.ViewModels.SpGuarantees
@{
    ViewBag.Title = ERP.ResourcePack.SpGuarantees.SpBeneficent.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);
    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as SpBeneficentVM;
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(SpBeneficentController.SpBeneficentForm), new { id = id, trigger = formTrigger, SpBeneficentVM = detailObj })
    </div>
    <div class="row clearfix">
        <div class="col-md-12 text-center" id="btnPostOrRefuseBeneficentContainer"></div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <div class="header">
                    <h2><strong>@ERP.ResourcePack.SpGuarantees.SpBeneficent.DetailData</strong></h2>
                </div>
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#first" data-toggle="tab" class="show active">@ERP.ResourcePack.SpGuarantees.SpBeneficent.Title2</a>
                    </li>
                    <li role="presentation">
                        <a href="#second" data-toggle="tab" class="show">@ERP.ResourcePack.SpGuarantees.SpBeneficent.Title3</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="first">
                        @Html.Action(nameof(SpBeneficentController.SpBeneficentFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(SpBeneficentController.SpBeneficentDataDetail))
                    </div>
                    <div role="tabpanel" class="tab-pane fade in" id="second">
                        @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                        {
                            @Html.Partial("_AttachmentForm");
                        }
                        @Html.Partial("_AttachmentsData");
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">@(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/SpBeneficent" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
        <script>
               let formView = true;
            const primaryEntityKeyId =  @(id == null ? 0 : id);
            const trigger = '@formTrigger';
        </script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        @Html.Partial("_ReportModal")
        @Html.Partial("~/ViewsScripts/_SpGuarantees/SpBeneficent/SpBeneficentScripts.cshtml")
        @if (id != null)
        {
            <script>
                $(function () {
                    LoadSpBeneficentDetailData();
                LoadAttachments();
                });
            </script>
        }
    }