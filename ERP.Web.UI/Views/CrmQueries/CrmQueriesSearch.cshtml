@using ERP.ResourcePack.CRM.CrmQueries
@using ERP.Web.UI.Models.ViewModels.CRM.Leads
@model CrmLeadsPersonsVM
<div class="card" id="searchBox">
    <div class="header d-flex justify-content-start align-items-center">
        <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#searchCollapse"></i>
        <h2><strong>@CrmQueries.PageTitle</strong> -  @ERP.ResourcePack.Accounts.ArReceipts.SearchForm</h2>
    </div>
    <div class="body collapse show" id="searchCollapse">
        <div class="row clearfix">

            <div class="col-sm-4">
                @Html.LabelFor(z => z.FullName, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.FullName, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.Phone, new { @class = "form-control" })
                        @Html.LabelFor(z => z.Phone, new { @class = "form-label" })
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.Email, new { @class = "form-control" })
                        @Html.LabelFor(z => z.Email, new { @class = "form-label" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-sm-4">
                @Html.LabelFor(z => z.ActivityType, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.ActivityType, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input type="text" name="fromDate" id="fromDate" class="form-control datepicker" />
                        <label class="form-label">@CrmQueries.FromDate</label>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input type="text" name="toDate" id="toDate" class="form-control datepicker" />
                        <label class="form-label">@CrmQueries.ToDate</label>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                @Html.LabelFor(z => z.UserId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.UserId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.CreatedDate, new { @class = "form-control datepicker", @Id = "SearchCreatedDate" })
                        @Html.LabelFor(z => z.CreatedDate, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.Company, new { @class = "form-control" })
                        @Html.LabelFor(z => z.Company, new { @class = "form-label" })
                    </div>
                </div>
            </div>
        </div>

            <div class="d-flex justify-content-end mb-3">
                <button type="button" class="btn btn-success btn-border-radius mx-2 waves-effect" onclick="return LoadDataGrid()">
                    @ERP.ResourcePack.Common.Settings.BtnSearch
                </button>
                <a href="javascript:void(0)" class="btn btn-danger btn-border-radius" onclick="return clearSearchForm()" role="button" aria-haspopup="true" aria-expanded="false">
                    @ERP.ResourcePack.Common.Settings.BtnClear
                </a>
            </div>
        </div>
    </div>