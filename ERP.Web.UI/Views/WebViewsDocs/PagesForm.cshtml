@using ERP.ResourcePack.Common
@using ERP.Web.UI.Models.ViewModels
@model PagesVM
@{
    string formTrigger = ViewBag.trigger;
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
}
<div class="card">
    <div class="body">
        @using (Ajax.BeginForm(nameof(ERP.Web.UI.Controllers.WebViewsController.PostPages), "Pages", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBegin", OnSuccess = "OnSuccess", OnComplete = "OnComplete", OnFailure = "OnFailure" }, new { @id = "mainForm" }))
        {
            @Html.HiddenFor(z => z.Id)
            @Html.HiddenFor(z => z.NameAr)
            @Html.HiddenFor(z => z.Selector)
            @Html.HiddenFor(z => z.Link)
            @Html.HiddenFor(z => z.NameEn)
            @Html.HiddenFor(z => z.Icon)
            @Html.HiddenFor(z => z.DocPathAr)
            @Html.HiddenFor(z => z.DocPathEn)
            @Html.HiddenFor(z => z.ModuleId)

            <div class="row clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.VideoUrlAr, new { @class = "form-control" })
                            @Html.LabelFor(z => z.VideoUrlAr, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            @Html.TextBoxFor(z => z.VideoUrlEn, new { @class = "form-control" })
                            @Html.LabelFor(z => z.VideoUrlEn, new { @class = "form-label" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    @Html.LabelFor(x => x.DocPathAr)
                    @if (Model == null || string.IsNullOrEmpty(Model.DocPathAr))
                    {
                        <img id="blah" src="~/AssetsPack/assets/images/Unknown.png" alt="Person Photo" style="height:200px" class="card-img-top img-thumbnail responsive-img" />
                    }
                    else
                    {
                        <img id="blah" src="@Model.DocPathAr" alt="Person Photo" style="height:200px" class="card-img-top img-thumbnail responsive-img" />
                    }
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        @Html.Partial("_AttachmentComponent", new ERP.Web.UI.Models.ViewModels.AttachmentComponentModelVM { HidenFilePathId = nameof(Model.DocPathAr), ImgId = "blah" })
                    }
                </div>

                <div class="col-sm-6">
                    @Html.LabelFor(x => x.DocPathEn)
                    @if (Model == null || string.IsNullOrEmpty(Model.DocPathEn))
                    {
                        <img id="blah2" src="~/AssetsPack/assets/images/Unknown.png" alt="Person Photo" style="height:200px" class="card-img-top img-thumbnail responsive-img" />
                    }
                    else
                    {
                        <img id="blah2" src="@Model.DocPathEn" alt="Person Photo" style="height:200px" class="card-img-top img-thumbnail responsive-img" />
                    }
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        @Html.Partial("_AttachmentComponent", new ERP.Web.UI.Models.ViewModels.AttachmentComponentModelVM { HidenFilePathId = nameof(Model.DocPathEn), ImgId = "blah2", FileUploaderId = $"{nameof(Model.DocPathEn)}-Uploader" })
                    }
                </div>
                <div class="col-sm-6">
                    @Html.LabelFor(x => x.Icon)
                    @if (Model == null || string.IsNullOrEmpty(Model.Icon))
                    {
                        <img id="blah3" src="~/AssetsPack/assets/images/Unknown.png" alt="Photo" style="height:200px" class="card-img-top img-thumbnail responsive-img" />
                    }
                    else
                    {
                        <img id="blah3" src="@Model.Icon" alt="Photo" style="height:200px" class="card-img-top img-thumbnail responsive-img" />
                    }
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        @Html.Partial("_AttachmentComponent", new ERP.Web.UI.Models.ViewModels.AttachmentComponentModelVM { HidenFilePathId = nameof(Model.Icon), ImgId = "blah3", FileUploaderId = $"{nameof(Model.Icon)}-Uploader" })
                    }
                </div>

            </div>

            <div class="row clearfix">
                <div class="form-group text-center form-float">
                    <button type="submit" class="btn btn-primary btn-lg m-l-15 waves-effect">@(Model == null ? ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)</button>
                    <div id="submitLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/AssetsPack/assets/js/pages/forms/basic-form-elements.js"></script>