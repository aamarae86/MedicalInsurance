<script>

    $("#searchForm").keyup(function () {
        var searchString = $(this).val();

        $('#jstreeForm').jstree('search', searchString);
    });

    $('#jstreeForm').on("changed.jstree", function (e, data) {

        var path = data.instance.get_path(data.node, '/');

        $('#ParentId').val(data.node.id);
        $('#ParentPath').val(path);
        $('#ParentPath').text(path);
        $('#ParentPath').parent('.form-line').addClass('focused');
    });

    $('#main-modal #NatureOfAccountLkpId').select2(ReturnSelect2ObjectForLkpsTypes('@ERP.Front.Helpers.Enums.Common.FndLkpsTypes.GlAccounts.ToString()'))

    $('#btnSubmition').on('click', function () {

        const _mainForm = $('#mainForm');

        if ($('#ParentId').val()) {

            $.ajax({
                url: `${baseUrl}/GlAccounts/GetGlAccountBoolAsync`,
                dataType: 'json',
                headers: {
                    'Authorization': `Bearer ${$_token}`
                },
                data: { Id: $('#ParentId').val() },
                cache: false,
                success: function (data) {
                    if (data.result == true) {

                        _mainForm.submit();

                        if (_mainForm.valid()) {

                            $(this).hide();
                            $('#submitLoader').show();

                        } else {

                            $(this).show();
                            $('#submitLoader').hide();

                        }
                    } else {
                        toastr.error('@ERP.ResourcePack.Accounts.Currencies.ParentNotPermitted');
                    }
                }
            });

        } else {
                       _mainForm.submit();

                        if (_mainForm.valid()) {

                            $(this).hide();
                            $('#submitLoader').show();

                        } else {

                            $(this).show();
                            $('#submitLoader').hide();

                        }
        }
    });

</script>

