@using ERP.Web.UI.Controllers.Accounts
@using ERP.ResourcePack.Accounts
@{
    string insertTrigger = ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString();
    string formAction = $"{System.Configuration.ConfigurationManager.AppSettings["PrefixHostName"].ToString()}/GlAccounts/{nameof(GlAccountsController.GlAccountsForm)}";
    string insertPermissionStr = TempData["InsertPermission"].ToString();
}

<style>
    .jstree-default .jstree-anchor {
        color: #000 !important;
    }
</style>

<div class="row no-gutters clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header d-flex justify-content-start align-items-center">
                <i class="fas fa-2x fa-chevron-down down-arr mr-2" data-toggle="collapse" data-target="#dataCollapse"></i>
                <h2> <strong>@ArCustomers.titGlAccounts</strong> -  @ERP.ResourcePack.Common.Settings.Data </h2>
                <ul class="header-dropdown m-r--5">
                    <a href="javascript:void(0);" onclick="return print(`${$PrefixHostName}/GlAccounts/PrintGlAccountsScreen`,'1', '@System.Threading.Thread.CurrentThread.CurrentCulture.Name')" title="@ERP.ResourcePack.Common.Settings.Print"><i class="mx-2 fas fa-print text-success"></i></a>
                    <button onclick="printExc();" class="btn btn-border-radius btn-success m-l-45 m-r-15 mr-auto waves-effect width-per-0">@ERP.ResourcePack.Common.Settings.excel</button>

                    @if (insertPermissionStr.Contains(ERP.Authorization.PermissionNames.Pages_GlAccounts_Insert))
                    {
                        <li class="dropdown">
                            <button id="btnAddAdd" onclick="AjaxController.GetFormModal('','@insertTrigger','@formAction','@ArCustomers.titGlAccounts');" class="btn btn-success btn-border-radius m-l-15 waves-effect">@ERP.ResourcePack.Common.Settings.BtnAddNew</button>
                        </li>
                    }
                    <button type="button" id="btnAdd" class="btn btn-success btn-border-radius m-l-15 waves-effect" data-toggle="modal" data-target="#myModal">@ArCustomers.OpenTree</button>

                    <!-- Modal -->
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog" style="max-width:65%">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">@ArCustomers.titGlAccounts</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <div class="wrapper-tree card p-3">
                                        <input id="search" type="search" placeholder="@ArCustomers.SearchForm" class="form-control">

                                        <div id="jstree"></div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </ul>
            </div>
            
            <div class="body collapse show" id="dataCollapse">
                <div class="table-responsive">
                    <div id="tblLoader" style="display:none">
                        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                    </div>
                    <table class="dataTable dt-responsive no-footer nowrap table table-bordered table-striped w-100" id="tblGlAccounts">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag"></i></th>
                                <th>@ArCustomers.No</th>
                                <th>@ArCustomers.NameAr</th>
                                <th>@ArCustomers.NameEn</th>
                                <th class="all"><i class="fas fa-cogs"></i></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                    <div class="d-none">
                        <table class="dataTable dt-responsive no-footer nowrap table table-bordered table-striped w-100 d-none" id="tblGIAccountsPrint">
                            <thead></thead>
                            <tbody></tbody>
                        </table>
                    </div>

                </div>
            </div>


        </div>
    </div>
</div>
<script>
     const print = function (url,id,lang) {
        const data = { id: id, lang : lang };
        openModal(data, url);
    };
</script>