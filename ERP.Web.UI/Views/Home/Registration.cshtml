@using ERP.MultiTenancy.Dto
@model ERP.Web.UI.Models.ViewModels.Tenant.CreateTenantVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-md-5">
        <div class="p-2" style="margin-top:5rem">
            <img class="img-fluid" alt="" src="~/AssetsPack/SystemLogos/logo Final.png">
            <hr />
        </div>
        <div class="p-4 text-center">
            <a href="@Url.Action("ChangeLanguage", "Login",new { area = string.Empty })" class="btn btn-outline-primary">
                @ERP.ResourcePack.Common.Settings.Lang
            </a>
        </div>
    </div>
    <div class="col-md-7 b-left">
        @if (TempData["FailedMessage"] != null && TempData["FailedMessage"].ToString() != string.Empty)
        {
            <p class="alert alert-danger text-center">
                @TempData["FailedMessage"].ToString()
            </p>
        }
        @using (Html.BeginForm("Registration", "Home", FormMethod.Post, new { @class = "validate-form" }))
        {
            @Html.HiddenFor(x => x.TenancyName)
            @Html.HiddenFor(x => x.Baseurl)
            <h1>@ERP.ResourcePack.Common.Settings.RegisterTitle</h1>
            <p>@ERP.ResourcePack.Common.Settings.RegisterHint</p>
            <div class="form-group validate-input" data-validate="Enter Full Name">
                <label for="Tenant" class="col-md-12 control-label must-fill">@ERP.ResourcePack.Common.Settings.fullName</label>
                @Html.TextBoxFor(z => z.FullName, new { @class = "form-control", @placeholder = ERP.ResourcePack.Common.Settings.fullName })
                @Html.ValidationMessageFor(z => z.FullName)
            </div>
            <div class="form-group validate-input" data-validate="Enter username">
                <label for="Tenant" class="col-md-12 control-label must-fill">@ERP.ResourcePack.Common.Settings.Email</label>
                @Html.TextBoxFor(z => z.AdminEmailAddress, new { @class = "form-control", @placeholder = ERP.ResourcePack.Common.Settings.AdminEmailAddress })
                @Html.ValidationMessageFor(z => z.AdminEmailAddress)
            </div>

            <div class="form-group validate-input" data-validate="Enter username">
                <label for="Tenant" class="col-md-12 control-label must-fill">@ERP.ResourcePack.Common.Settings.Mobile</label>
                @Html.TextBoxFor(z => z.MobileNo, new { @class = "form-control", @placeholder = ERP.ResourcePack.Common.Settings.Mobile })
                @Html.ValidationMessageFor(z => z.MobileNo)
            </div>


            @*<div class="form-group validate-input" data-validate="Enter username">
                @Html.TextBoxFor(z => z.TenancyName, new { @class = "form-control", @placeholder = ERP.ResourcePack.Common.Settings.TenancyName })
            </div>*@
            <div class="form-group validate-input" data-validate="Enter Organisation Name">
                <label for="Tenant" class="col-md-12 control-label must-fill">@ERP.ResourcePack.Common.Settings.UsrName</label>
                @Html.TextBoxFor(z => z.Name, new { @class = "form-control", @placeholder = ERP.ResourcePack.Common.Settings.Name })
                  @Html.ValidationMessageFor(z => z.Name)

            </div>
            <div class="form-group validate-input" data-validate="Enter password">
                <div class="form-line">
                    <label for="Tenant" class="col-md-12 control-label must-fill">@ERP.ResourcePack.Common.Settings.CountryLkpId</label>
                    @Html.DropDownListFor(z => z.CountryLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(z => z.CountryLkpId)
            </div>
            <div class="form-group validate-input" data-validate="Enter password">
                <div class="form-line">
                    <label for="Tenant" class="col-md-12 control-label must-fill">@ERP.ResourcePack.Common.Settings.IndustryLkpId</label>
                    @Html.DropDownListFor(z => z.IndustryLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(z => z.IndustryLkpId)
            </div>
            @*<div class="form-group validate-input" data-validate="Select Country">
                @Html.DropDownListFor(z => z.CountryLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control", @placeholder = ERP.ResourcePack.Common.Settings.Name })
            </div>
            <div class="form-group validate-input" data-validate="Select Industry">
                @Html.DropDownListFor(z => z.IndustryLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control", @placeholder = ERP.ResourcePack.Common.Settings.Name })
            </div>*@
            @*<div class="form-group validate-input" data-validate="Enter password">
                @Html.PasswordFor(z => z.AdminPassword, new { @class = "form-control", @placeholder = ERP.ResourcePack.Common.Settings.AdminPassword })
            </div>*@
            <div class="text-center">
                <button type="submit" class="btn btn-success">@ERP.ResourcePack.Common.Settings.Register</button>
            </div>
        }

    </div>
</div>

@section scripts{
    <script src="~/AssetsPack/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/Scripts/jquery.inputmask.min.js"></script>
    <script>
        $('#CountryLkpId').select2(ReturnSelect2ObjectForLkpsTypes('@ERP.Front.Helpers.Enums.Common.FndLkpsTypes.Nationality.ToString()'));
        $('#IndustryLkpId').select2(ReturnSelect2ObjectForLkpsTypes('@ERP.Front.Helpers.Enums.Common.FndLkpsTypes.Industries.ToString()'));
        $('#Baseurl').val(window.location.origin);
        $('#Name').on('change', function (e) {
            $('#TenancyName').val($(this).val());
        });

    </script>
}