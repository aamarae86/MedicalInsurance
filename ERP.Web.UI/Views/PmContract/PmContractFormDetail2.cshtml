@using ERP.Web.UI.Models.ViewModels.PmPropertiesModule
@model PmContractPaymentsVM
@{
    string formTrigger = ViewBag.trigger;
}

<div class="card" style="display:@(formTrigger ==ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString() ? "none":"block" ) ">
    <div class="body">
        <div class="row clearfix">
            <div class="col-sm-2">
                @Html.LabelFor(z => z.PaymentTypeLkpId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.PaymentTypeLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.CheckNumber, new { @class = "form-control", @type = "number", @min = 0 })
                        @Html.LabelFor(z => z.CheckNumber, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.PaymentNo, new { @class = "form-control", @readonly = "readonly", @type = "number", @min = 0 })
                        @Html.LabelFor(z => z.PaymentNo, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            @*<div class="col-sm-2">
                @Html.LabelFor(z => z.PaymentSourceLkpId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.PaymentSourceLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>*@
            <div class="col-md-2">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.PaymentDate, new { @class = "form-control datepicker" })
                        @Html.LabelFor(z => z.PaymentDate, new { @class = "form-label" })
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                @Html.LabelFor(z => z.BankLkpId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.BankLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextBoxFor(z => z.PayAmount, new { @class = "form-control currency" })
                        @Html.LabelFor(z => z.PayAmount, new { @class = "form-label" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.TextAreaFor(z => z.Comments, new { @class = "form-control" })
                        @Html.LabelFor(z => z.Comments, new { @class = "form-label" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12 text-center">
                <div class="form-group">
                    <button id="btnAddPaymentsRow" onclick="return AddPayments()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.BtnAddNew</button>
                    <button style="display:none;" id="btnUpdatePaymentsRow" onclick="return UpdatePaymentsRow()" class="btn btn-info">@ERP.ResourcePack.Common.Settings.BtnUpdate</button>
                    <button style="display:none;" id="btnCancelPaymentsRow" onclick="clearFormAdding(); $('#btnCancelPaymentsRow').hide();$('#btnUpdatePaymentsRow').hide();$('#btnAddPaymentsRow').show();" class="btn btn-danger">@ERP.ResourcePack.Common.Settings.BtnCancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
