@using ERP.Web.UI.Models.ViewModels.Accounts
@model ERP.Web.UI.Models.ViewModels.Accounts.ArJobSurveyTrVM
@{
    string lang = Request.Cookies["Lang"] == null ? "ar-EG" : Request.Cookies["Lang"].Value.ToString();
    bool isFormDetail = Model != null &&  ViewBag.trigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString();
}

<div class="card" id="ArJobSurveyTrForm" style="display:@(ViewBag.trigger ==ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString() ? "none":"block" ) ">
    <div class="body">
        <div class="row clearfix">

            <div class="col-sm-3">
                @Html.LabelFor(z => z.PartsCategoryLkpId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.PartsCategoryLkpId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(z => z.ArJobSurveyPartsId, new { @class = "form-label" })
                <div class="form-group form-float">
                    <div class="form-group">
                        @Html.DropDownListFor(z => z.ArJobSurveyPartsId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <p class="my-3">
                    <label>
                        <input type="checkbox" id="@nameof(Model.IsRepair)" name="@nameof(Model.IsRepair)" />
                        <span>@Html.LabelFor(z => z.IsRepair)</span>
                    </label>
                </p>
            </div>
            <div class="col-md-3">
                <p class="my-3">
                    <label>
                        <input type="checkbox" id="@nameof(Model.IsReplace)" name="@nameof(Model.IsReplace)" />
                        <span>@Html.LabelFor(z => z.IsReplace)</span>
                    </label>
                </p>
            </div>


            <div class="col-sm-3">
                <div class="form-group">
                    <button id="btnAddArJobSurveyTrRow" onclick="return AddArJobSurveyTrDetail()" class="btn btn-success">@ERP.ResourcePack.Common.Settings.BtnAddNew</button>
                    <button style="display:none;" id="btnUpdateArJobSurveyTrRow" onclick="return UpdateArJobSurveyTrDetailRow()" class="btn btn-info">@ERP.ResourcePack.Common.Settings.BtnUpdate</button>
                    <button style="display:none;" id="btnCancelArJobSurveyTrRow" onclick="clearFormAdding(); $('#btnCancelArJobSurveyTrRow').hide();$('#btnUpdateArJobSurveyTrRow').hide();$('#btnAddArJobSurveyTrRow').show();" class="btn btn-danger">@ERP.ResourcePack.Common.Settings.BtnCancel</button>
                </div>
            </div>
        </div>

    </div>
</div>


@functions {
    object getHtmlAttributes(bool Disabled, string CssClass, string CssClass2)
    {
        if (Disabled) return new { @class = CssClass, Disabled = Disabled };
        return new { @class = $"{CssClass} {CssClass2}" };
    }
}
