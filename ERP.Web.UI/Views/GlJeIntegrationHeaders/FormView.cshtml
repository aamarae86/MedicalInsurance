@using ERP.Web.UI.Controllers.AccountsExtend
@using ERP.Web.UI.Models.ViewModels.AccountsExtend
@using ERP.Web.UI.Models.ViewModels.Accounts
@{
    ViewBag.Title = ERP.ResourcePack.AccountsExtend.GlJeIntegrationHeaders.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formTrigger = ViewBag.trigger;
    long? id = ViewData["Id"] == null ? null : (long?)Convert.ToInt32(ViewData["Id"]);

    var detailObj = ViewData["DetailAsync"] == null ? null : ViewData["DetailAsync"] as GlJeIntegrationHeadersVM;
}

<div class="row clearfix">
    <div class="col-12">
        @Html.Action(nameof(GlJeIntegrationHeadersController.GlJeIntegrationHeadersForm), new { id = id, trigger = formTrigger, glJeIntegrationHeadersVM = detailObj })
    </div>
    <div class="col-12">
        <div class="card">
            <div class="body">
                <ul class="mt-2 nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation">
                        <a href="#accounts-lines" data-toggle="tab" class="show active">@ERP.ResourcePack.AccountsExtend.GlJeIntegrationHeaders.AccountLines</a>
                    </li>
                    <li role="presentation">
                        <a href="#vendors-lines" data-toggle="tab" class="show ">@ERP.ResourcePack.AccountsExtend.GlJeIntegrationHeaders.VendorLines</a>
                    </li>
                    <li role="presentation">
                        <a href="#customers-lines" data-toggle="tab" class="show ">@ERP.ResourcePack.AccountsExtend.GlJeIntegrationHeaders.CustomerLines</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="accounts-lines">
                        @Html.Action(nameof(GlJeIntegrationHeadersController.AccountsLinesFormDetail), new { id = id, trigger = formTrigger, glAccHeadersVMs = ViewData["ListGlAccHeadersVM"] == null ? new List<GlAccHeadersVM>() : ViewData["ListGlAccHeadersVM"] as List<GlAccHeadersVM> })
                        @Html.Action(nameof(GlJeIntegrationHeadersController.AccountsLinesDataDetail))
                    </div>
                    <div role="tabpanel" class="tab-pane fade in  show" id="vendors-lines">
                        @Html.Action(nameof(GlJeIntegrationHeadersController.VendorsLinesFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(GlJeIntegrationHeadersController.VendorsLinesDataDetail))
                    </div>
                    <div role="tabpanel" class="tab-pane fade in  show" id="customers-lines">
                        @Html.Action(nameof(GlJeIntegrationHeadersController.CustomersLinesFormDetail), new { id = id, trigger = formTrigger })
                        @Html.Action(nameof(GlJeIntegrationHeadersController.CustomersLinesDataDetail))
                    </div>
                </div>
                <div class="row clearfix"> <div class="col-md-12 text-center" id="btnContainer"></div></div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    @if (formTrigger != ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString())
                    {
                        <button type="submit" id="btnSubmition" class="btn btn-info btn-lg m-l-15 waves-effect">
                            @(formTrigger == ERP.Front.Helpers.Enums.Common.FormTriggers.Insert.ToString() ?
                                ERP.ResourcePack.Common.Settings.BtnSave : ERP.ResourcePack.Common.Settings.BtnUpdate)
                        </button>
                        <div id="submitLoader" style="display:none">
                            <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                        </div>
                    }
                    <a href="~/GlJeIntegrationHeaders" class="btn btn-danger btn-lg m-l-15 waves-effect">@(ERP.ResourcePack.Common.Settings.BtnClose)</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>

        const primaryEntityKeyId =  @(id ?? 0);
        const trigger = '@formTrigger';
        let formView = true;

    </script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @Html.Partial("~/ViewsScripts/_Accounts/GlJeIntegrationHeaders/GlJeIntegrationHeadersScripts.cshtml")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScripts.cshtml", ViewData["repeatTrigger"] = "")
    @Html.Partial("~/ViewsScripts/GlAccDetails/GlAccDetailsScriptManager.cshtml")
    @if (id != null)
    {
        <script>
            $(function () {

                LoadAccountLineData();
                LoadVendorLinesData();
                LoadCustomerLinesData();

                if (primaryEntityKeyId && trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Show.ToString()' && @detailObj.StatusLkpId == @Convert.ToInt64(ERP.Front.Helpers.Enums.Common.GlJeIntegrationHeaders.New)) {

                    let btns = `<a href="javascript:void(0)" onclick="return PostInvoice(@id)" class="btn btn-success">${'@ERP.ResourcePack.Common.Settings.Post'}</a>`;

                    $('#btnContainer').html(btns);
                };
            });
        </script>
    }
}

