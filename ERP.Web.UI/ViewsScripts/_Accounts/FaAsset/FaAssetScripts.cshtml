    $('#@nameof(FaAssetsVM.OwnershipLkpId)').select2(ReturnSelect2ObjectForLkpsTypes('@ERP.Front.Helpers.Enums.Common.FndLkpsTypes.FaAssetsOwnershipLkpId.ToString()'));
