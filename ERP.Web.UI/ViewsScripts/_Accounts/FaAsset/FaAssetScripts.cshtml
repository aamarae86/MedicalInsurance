    $('#@nameof(FaAssetsVM.BookingTypeLkpId)').select2(ReturnSelect2ObjectForLkpsTypes('@ERP.Front.Helpers.Enums.Common.FndLkpsTypes.FaAssetsBookingTypeLkpId.ToString()'));
