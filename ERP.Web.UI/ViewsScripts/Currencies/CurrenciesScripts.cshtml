@using ERP.Authorization;
@using ERP.Web.UI.Controllers.Accounts
@using ERP.ResourcePack.Accounts
@{
    string permissionsStr = TempData["Permissions"].ToString();
}
<script>
    const _mainController = "Currencies"

    $(function () {
        LoadDataGrid();

        $('#tblCurrenciesPrint thead').html($('#tblCurrencies thead').html());
        $('#tblCurrenciesPrint thead tr :last-child').remove();

        $('#Currencies').addClass('active');
    });

    const _loadDataUrl = `${$PrefixHostName}/${_mainController}/@nameof(CurrenciesController.LoadDataGrid)`;
    const _tblSelector = $('#tblCurrencies');
    const _tblLoader = $('#tblLoader');
    const _txtCodeSearch = $('#searchBox #Code');
    const _txtDescriptionArSearch = $('#searchBox #DescriptionAr');
    const _txtDescriptionEnSearch = $('#searchBox #DescriptionEn');

    const _permissions = '@permissionsStr';
    const _updatePermission = '@PermissionNames.Pages_Currencies_Update';
    const _deletePermission = '@PermissionNames.Pages_Currencies_Delete';

    var OnBegin = function (response) {
      fireBtnLoader();
    };

    var OnSuccess = function (response) {

        if (response.success) {

            if (response.customRestResult.trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Insert') {

                toastr.success(response.customRestResult.message);

                LoadDataGrid();

                _mainModal.modal('hide');

            } else if (response.customRestResult.trigger === '@ERP.Front.Helpers.Enums.Common.FormTriggers.Update') {

                LoadDataGrid();

                _mainModal.modal('hide');

                toastr.success(response.customRestResult.message);
            }

        } else {
            toastr.error(response.customRestResult.message);
        }

    };

    var OnComplete = function (response) {
        downBtnLoader();
    };

    var OnFailure = function (response) {
        toastr.error(response);
        console.log(response);
        downBtnLoader();
    };

    const LoadDataGrid = function () {

        $('#tblLoader').show();

        const parms = {
            Code: _txtCodeSearch.val(),
            DescriptionAr: _txtDescriptionArSearch.val(),
            DescriptionEn: _txtDescriptionEnSearch.val()
        };

        const columns = [
            {
                "data": "result.data.id",
                'render': function (data, type, row, meta) {
                    return meta.row + meta.settings._iDisplayStart + 1;
                }
            },
            {
                "data": "Code",
                "name": "Code",
                "autoWidth": true
            },
            {
                "data": "DescriptionAr",
                "name": "DescriptionAr",
                "autoWidth": true
            },
            {
                "data": "DescriptionEn",
                "name": "DescriptionEn",
                "autoWidth": true
            },
            {
                "data": "Rate",
                "name": "Rate",
                "autoWidth": true
            },
            {
                "data": "IsLocalCurrency",
                "name": "IsLocalCurrency",
                "autoWidth": true
            }, {
                "data": null,
                "sortable": false,
                "render": function (data, type, row) {

                    let formAction = `${$PrefixHostName}/${_mainController}/@nameof(CurrenciesController.CurrenciesForm)`;
                    let DeleteAction = `${$PrefixHostName}/${_mainController}/@nameof(CurrenciesController.Delete)`;

                    let formTitle = '@Currencies.Title', btns = '';

                    if (_permissions.includes(_updatePermission)) {
                        btns += `<a href="javascript:void(0)" onclick="AjaxController.GetFormModal(${row.Id},'@ERP.Front.Helpers.Enums.Common.FormTriggers.Update','${formAction}','${formTitle}');" title="@ERP.ResourcePack.Common.Settings.Edit"><i class="mx-2 fas fa-edit text-info"></i></a>`;
                    }

                    btns += `<a href="javascript:void(0)" onclick="AjaxController.GetFormModal(${row.Id},'@ERP.Front.Helpers.Enums.Common.FormTriggers.Show','${formAction}','${formTitle}');" title="@ERP.ResourcePack.Common.Settings.Show"><i class="mx-2 fas fa-eye text-info"></i></a>`;

                    if (_permissions.includes(_deletePermission)) {
                        btns += `<a href="javascript:void(0)" onclick="AjaxController.DeleteMainTableRow(${row.Id},'${DeleteAction}');" title="@ERP.ResourcePack.Common.Settings.Delete"><i class="mx-2 fas fa-trash-alt text-danger"></i></a>`;
                    }

                    const _auditedPermission = '@PermissionNames.Pages_Currencies_Audit';

                    if (_permissions.includes(_auditedPermission)) {

                        row.permission = _auditedPermission;

                        btns += GetAuditedButton(row);
                    }

                    return btns;
                }
            }
        ];

        const dtObj = {
            "processing": true,
            "serverSide": true,
            "filter": false,
            "orderMulti": false,
            "language": dataTableLang,
            "ajax": {
                "url": _loadDataUrl,
                "type": "POST",
                "datatype": "json",
                "data": parms,
                "complete": function () {
                    _tblLoader.hide();
                }
            },
            "columns": columns,
            "initComplete": function () {
                $('[data-toggle="tooltip"]').tooltip();
            }
        };

        _tblSelector.dataTable().fnDestroy();
        _tblSelector.DataTable(dtObj).on('draw', function () { $('[data-toggle="tooltip"]').tooltip(); });

        setTimeout(function () {
            $(".sorting_1").removeAttr('colspan');
        }, 500);

        };


        function printExc() {
            $('.page-loader-wrapper').show();
            $('#tblCurrenciesPrint_wrapper').parent().addClass('d-none');
            const parmss = {
                Code: _txtCodeSearch.val(),
                DescriptionAr: _txtDescriptionArSearch.val(),
                DescriptionEn: _txtDescriptionEnSearch.val(),
                length: 1000000
            };

            $('#tblLoader').show();


        const columns = [
            {
                "data": "result.data.id",
                'render': function (data, type, row, meta) {
                    return meta.row + meta.settings._iDisplayStart + 1;
                }
            },
            {
                "data": "Code",
                "name": "Code",
                "autoWidth": true
            },
            {
                "data": "DescriptionAr",
                "name": "DescriptionAr",
                "autoWidth": true
            },
            {
                "data": "DescriptionEn",
                "name": "DescriptionEn",
                "autoWidth": true
            },
            {
                "data": "Rate",
                "name": "Rate",
                "autoWidth": true
            },
            {
                "data": "IsLocalCurrency",
                "name": "IsLocalCurrency",
                "autoWidth": true
            }
        ];

            const dtObj = {
                "language": dataTableLang,
                "dom": 'Bfrtip',
                "buttons": [
                    {
                        extend: 'excel',
                        messageTop: `${$('#Code').siblings().text()}: ${(parmss.Code) ? parmss.Code : '--'}, ${$('#DescriptionAr').siblings().text()}: ${(parmss.DescriptionAr) ? parmss.Description : '--'}, ${$('#DescriptionEn').siblings().text()}: ${(parmss.DescriptionEn) ? parmss.DescriptionEn : '--'}`
                    },

                ],
                "ajax": {
                    "url": _loadDataUrl,
                    "type": "POST",
                    "datatype": "json",
                    "data": parmss,
                    "complete": function (d) {
                        _tblLoader.hide();
                    }
                },
                "columns": columns,

                "initComplete": function () {
                    $('#tblCurrenciesPrint_wrapper button.dt-button').click();
                    $('#tblCurrenciesPrint_wrapper').parent().addClass('d-none');

                }
            };

            $('#tblCurrenciesPrint').dataTable().fnDestroy();
            $('#tblCurrenciesPrint').DataTable(dtObj).on('buttons-processing', function (e, indicator) { if (!indicator) { $('.page-loader-wrapper').hide() } });


        }

</script>
