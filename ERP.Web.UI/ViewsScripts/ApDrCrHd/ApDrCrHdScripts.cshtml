                "complete": function (d) {
                    _tblLoader.hide();
                }
            },
            "columns": columns,

            "initComplete": function () {
                $('#tblApDrCrHdPrint_wrapper button.dt-button').click();
                $('#tblApDrCrHdPrint_wrapper').parent().addClass('d-none');

