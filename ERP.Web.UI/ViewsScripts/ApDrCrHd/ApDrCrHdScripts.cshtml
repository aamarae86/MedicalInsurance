                "data": "HdDrCrNumber",
                "name": "HdDrCrNumber",
                "autoWidth": true
            },
            {
                "data": "HdDate",
                "name": "HdDate",
                "autoWidth": true
            },
            {
                "data": null,
                "autoWidth": true,
                "render": function (d, t, row) {
                    if (row.Vendors == null) return '';

                    return lang === 'ar-EG' ? row.Vendors.VendorNumber : row.Vendors.VendorNumber;
                }
            },
            {
                "data": null,
                "autoWidth": true,
                "render": function (d, t, row) {
                    if (row.Vendors == null) return '';

                    return lang === 'ar-EG' ? row.Vendors.VendorNameAr : row.Vendors.VendorNameEn;
                }
            },
            {
                "data": null,
                "autoWidth": true,
                "render": function (d, t, row) {
                    if (row.FndLookupValuesStatusLkp == null) return '';

                    return lang === 'ar-EG' ? row.FndLookupValuesStatusLkp.NameAr : row.FndLookupValuesStatusLkp.NameEn;
